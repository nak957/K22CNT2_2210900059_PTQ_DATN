@model List<_2210900059_PTQ_DATN.Models.DichVu>

@{
    ViewData["Title"] = "Dịch vụ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="accent-line"></div>

<section class="section services">
    <div class="container">
        <div class="service-row">

            @if (Model != null && Model.Any())
            {
                foreach (var dv in Model)
                {
                    <article class="card service-card">
                        <div class="service-img">
                            @if (!string.IsNullOrEmpty(dv.HinhAnh))
                            {
                                <img src="@(Url.Content("~/images/services/" + dv.HinhAnh))"
                                     alt="@dv.TenDichVu" />
                            }
                            else
                            {
                                <img src="@(Url.Content("~/images/no-image.png"))"
                                     alt="No image" />
                            }
                        </div>

                        <div class="card-body">
                            <h3>@dv.TenDichVu</h3>

                            @if (!string.IsNullOrEmpty(dv.MoTaNgan))
                            {
                                <p class="service-desc">
                                    @dv.MoTaNgan
                                </p>
                            }

                            <div class="card-body">
                                <h3>@dv.TenDichVu</h3>
                                <a href="@Url.Action("ChiTiet", "DichVu", new { id = dv.MaDichVu })"
                                   class="btn-outline">Xem chi tiết</a>
                            </div>
                        </div>
                    </article>
                }
            }
            else
            {
                <p>Chưa có dịch vụ nào.</p>
            }

        </div>
    </div>
</section>
