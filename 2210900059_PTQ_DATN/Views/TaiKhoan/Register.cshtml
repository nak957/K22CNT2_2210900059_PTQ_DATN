@model _2210900059_PTQ_DATN.Models.ViewModels.RegisterViewModel

@{
    Layout = null;
    ViewData["Title"] = "Đăng ký";
}

<!DOCTYPE html>
<html lang="vi" class="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register - Beauty Sanctuary</title>

    <!-- Tailwind -->
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;700;800&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght@100..700" rel="stylesheet" />

    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        primary: "#e67919",
                        gold: "#D9BB55",
                        bgLight: "#f6f5f4",
                        bgDark: "#231f1a"
                    },
                    fontFamily: {
                        display: ["Manrope", "sans-serif"]
                    }
                }
            }
        }
    </script>

    <style>
        body {
            font-family: 'Manrope', sans-serif;
        }

        .gold-gradient {
            background: linear-gradient(135deg, #e67919 0%, #D9BB55 100%);
        }

        .soft-shadow {
            box-shadow: 0 10px 40px -10px rgba(230, 121, 25, 0.15);
        }
    </style>
</head>

<body class="bg-bgLight min-h-screen">
    <div class="flex min-h-screen">

        <!-- LEFT IMAGE -->
        <div class="hidden lg:flex w-1/2 relative">
            <div class="absolute inset-0 bg-cover bg-center"
                 style="background-image:
             linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)),
             url('@Url.Content("~/images/Backgroud.jpg")');">
            </div>

            <div class="relative z-10 flex flex-col justify-between p-16 text-white">
                <div class="flex items-center gap-3">
                    <span class="material-symbols-outlined text-4xl">spa</span>
                    <span class="text-2xl font-bold">TQbeauty</span>
                </div>

                <div>
                    <h2 class="text-4xl font-extrabold mb-4">
                        Bắt đầu hành trình làm đẹp
                    </h2>
                    <p class="text-lg text-white/80">
                        Tạo tài khoản để trải nghiệm dịch vụ của chúng tôi
                    </p>
                </div>
            </div>
        </div>

        <!-- RIGHT REGISTER -->
        <div class="flex-1 flex items-center justify-center px-6">
            <div class="w-full max-w-md">

                <div class="mb-8 text-center lg:text-left">
                    <h1 class="text-3xl font-extrabold text-gray-900 mb-2">
                        Đăng ký tài khoản
                    </h1>
                    <p class="text-gray-500">
                        Vui lòng nhập thông tin bên dưới
                    </p>
                </div>

                <div class="bg-white rounded-xl soft-shadow p-8 border-t-4 border-gold">
                    <form asp-action="Register" method="post" class="space-y-5">
                        @Html.AntiForgeryToken()

                        <!-- USERNAME -->
                        <div>
                            <label class="text-sm font-semibold uppercase text-gray-700">
                                Tên đăng nhập
                            </label>
                            <input asp-for="TenDangNhap"
                                   class="mt-2 w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary/50 focus:border-primary"
                                   placeholder="Tên đăng nhập" />
                            <span asp-validation-for="TenDangNhap"
                                  class="text-red-600 text-sm"></span>
                        </div>

                        <!-- PASSWORD -->
                        <div>
                            <label class="text-sm font-semibold uppercase text-gray-700">
                                Mật khẩu
                            </label>
                            <input asp-for="MatKhau" type="password"
                                   class="mt-2 w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary/50 focus:border-primary"
                                   placeholder="••••••••" />
                            <span asp-validation-for="MatKhau"
                                  class="text-red-600 text-sm"></span>
                        </div>

                        <!-- FULL NAME -->
                        <div>
                            <label class="text-sm font-semibold uppercase text-gray-700">
                                Họ tên
                            </label>
                            <input asp-for="HoTen"
                                   class="mt-2 w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary/50 focus:border-primary"
                                   placeholder="Họ và tên" />
                        </div>

                        <!-- EMAIL -->
                        <div>
                            <label class="text-sm font-semibold uppercase text-gray-700">
                                Email
                            </label>
                            <input asp-for="Email"
                                   class="mt-2 w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary/50 focus:border-primary"
                                   placeholder="email@example.com" />
                            <span asp-validation-for="Email"
                                  class="text-red-600 text-sm"></span>
                        </div>
                        <!-- PHONE -->
                        <div>
                            <label class="text-sm font-semibold uppercase text-gray-700">
                                Số điện thoại
                            </label>
                            <input asp-for="SoDienThoai"
                                   class="mt-2 w-full px-4 py-3 rounded-lg border border-gray-300
                                    focus:ring-2 focus:ring-primary/50 focus:border-primary"
                                   placeholder="0123456789" />
                            <span asp-validation-for="SoDienThoai"
                                  class="text-red-600 text-sm"></span>
                        </div>

                        <!-- ADDRESS -->
                        <div>
                            <label class="text-sm font-semibold uppercase text-gray-700">
                                Địa chỉ giao hàng
                            </label>
                            <textarea asp-for="DiaChi"
                                      rows="3"
                                      class="mt-2 w-full px-4 py-3 rounded-lg border border-gray-300
                                        focus:ring-2 focus:ring-primary/50 focus:border-primary"
                                      placeholder="Số nhà, đường, phường/xã, quận/huyện..."></textarea>
                        </div>

                        <!-- BUTTON -->
                        <button type="submit"
                                class="gold-gradient w-full py-3 rounded-lg text-white font-bold text-lg hover:shadow-lg transition">
                            Tạo tài khoản
                        </button>
                    </form>
                </div>

                <div class="mt-6 text-center text-sm text-gray-500">
                    Đã có tài khoản?
                    <a asp-action="Login"
                       class="text-primary font-semibold hover:underline">
                        Đăng nhập ngay
                    </a>
                </div>
                <div class="text-center">
                    <a asp-controller="Home"
                       asp-action="Index"
                       class="inline-flex items-center justify-center w-full py-3 rounded-lg
                          border border-gray-300 text-gray-700 font-semibold
                          hover:bg-gray-100 transition">
                        <span class="material-symbols-outlined mr-2 text-base">
                            arrow_back
                        </span>
                        Về trang chủ
                    </a>
                </div>

                <div class="mt-4 text-center text-xs text-gray-400">
                    © 2024 Beauty Sanctuary Systems
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
