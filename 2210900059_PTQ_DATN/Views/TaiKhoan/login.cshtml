@{
    Layout = null;
    ViewData["Title"] = "Đăng nhập ";
}

<!DOCTYPE html>
<html lang="vi" class="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Login - Beauty Sanctuary</title>

    <!-- Tailwind -->
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;700;800&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght@100..700" rel="stylesheet" />

    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        primary: "#e67919",
                        gold: "#D9BB55",
                        bgLight: "#f6f5f4",
                        bgDark: "#231f1a"
                    },
                    fontFamily: {
                        display: ["Manrope", "sans-serif"]
                    }
                }
            }
        }
    </script>

    <style>
        body {
            font-family: 'Manrope', sans-serif;
        }

        .gold-gradient {
            background: linear-gradient(135deg, #e67919 0%, #D9BB55 100%);
        }

        .soft-shadow {
            box-shadow: 0 10px 40px -10px rgba(230, 121, 25, 0.15);
        }
    </style>
</head>

<body class="bg-bgLight min-h-screen">
    <div class="flex min-h-screen">

        <!-- LEFT IMAGE -->
        <div class="hidden lg:flex w-1/2 relative">
            <div class="absolute inset-0 bg-cover bg-center"
                 style="background-image:
                 linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)),
                 url('@Url.Content("~/images/Backgroud.jpg")');">
            </div>


            <div class="relative z-10 flex flex-col justify-between p-16 text-white">
                <div class="flex items-center gap-3">
                    <span class="material-symbols-outlined text-4xl">spa</span>
                    <span class="text-2xl font-bold">TQbeauty</span>
                </div>

                <div>
                    <h2 class="text-4xl font-extrabold mb-4">Nâng tầm sắc đẹp của bạn</h2>
                    <p class="text-lg text-white/80">
                       
                    </p>
                </div>
            </div>
        </div>

        <!-- RIGHT LOGIN -->
        <div class="flex-1 flex items-center justify-center px-6">
            <div class="w-full max-w-md">

                <div class="mb-8 text-center lg:text-left">
                    <h1 class="text-3xl font-extrabold text-gray-900 mb-2">
                        Chào mừng quay lại
                    </h1>
                    <p class="text-gray-500">
                        Đăng nhập để sử dụng dịch vụ hệ thống
                    </p>
                </div>

                <div class="bg-white rounded-xl soft-shadow p-8 border-t-4 border-gold">
                    <form asp-action="Login" method="post" class="space-y-6">

                        <!-- USERNAME -->
                        <div>
                            <label class="text-sm font-semibold uppercase text-gray-700">
                                Tên đăng nhập
                            </label>
                            <div class="relative mt-2">
                                <span class="material-symbols-outlined absolute left-4 top-1/2 -translate-y-1/2 text-gray-400">
                                    person
                                </span>
                                <input name="username"
                                       required
                                       class="w-full pl-12 pr-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary/50 focus:border-primary"
                                       placeholder="Nhập tên đăng nhập" />
                            </div>
                        </div>

                        <!-- PASSWORD -->
                        <div>
                            <label class="text-sm font-semibold uppercase text-gray-700">
                                Mật khẩu
                            </label>
                            <div class="relative mt-2">
                                <span class="material-symbols-outlined absolute left-4 top-1/2 -translate-y-1/2 text-gray-400">
                                    lock
                                </span>
                                <input type="password"
                                       name="password"
                                       required
                                       class="w-full pl-12 pr-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary/50 focus:border-primary"
                                       placeholder="••••••••" />
                            </div>
                        </div>

                        <!-- REMEMBER -->
                        <div class="flex items-center gap-2">
                            <input type="checkbox" name="remember" class="rounded text-primary" />
                            <span class="text-sm text-gray-600">Ghi nhớ đăng nhập</span>
                        </div>

                        <!-- ERROR -->
                        @if (ViewBag.Error != null)
                        {
                            <div class="text-red-600 text-sm font-semibold">
                                @ViewBag.Error
                            </div>
                        }

                        <!-- BUTTON -->
                        <button type="submit"
                                class="gold-gradient w-full py-3 rounded-lg text-white font-bold text-lg hover:shadow-lg transition">
                            Đăng nhập hệ thống
                        </button>
                        <div class="text-center text-sm text-gray-600">
                            Chưa có tài khoản?
                            <a asp-controller="TaiKhoan"
                               asp-action="Register"
                               class="font-semibold text-primary hover:underline">
                                Đăng ký ngay
                            </a>
                        </div>
                        <div class="text-center">
                            <a asp-controller="Home"
                               asp-action="Index"
                                                   class="inline-flex items-center justify-center w-full py-3 rounded-lg
                                  border border-gray-300 text-gray-700 font-semibold
                                  hover:bg-gray-100 transition">
                                <span class="material-symbols-outlined mr-2 text-base">
                                    arrow_back
                                </span>
                                Về trang chủ
                            </a>
                        </div>

                    </form>
                </div>

                <div class="mt-6 text-center text-xs text-gray-400">
                    © 2024 Beauty Sanctuary Systems
                </div>
            </div>
        </div>
    </div>
</body>
</html>
