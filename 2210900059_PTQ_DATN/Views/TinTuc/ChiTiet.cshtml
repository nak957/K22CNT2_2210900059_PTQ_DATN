@model _2210900059_PTQ_DATN.Models.BaiViet

@{
    ViewData["Title"] = Model.TieuDe;
}

<style>
    :root {
        --primary: #d98b2b;
        --text-dark: #2d2d2d;
        --text-muted: #777;
        --line: #eee;
    }

    /* ===== PAGE ===== */
    .post-wrapper {
        max-width: 860px;
        margin: 0 auto;
        padding: 70px 16px;
    }

    /* ===== TITLE ===== */
    .post-title {
        font-size: 34px;
        font-weight: 700;
        line-height: 1.3;
        color: var(--text-dark);
        margin-bottom: 10px;
    }

    .post-meta {
        font-size: 14px;
        color: var(--text-muted);
        margin-bottom: 30px;
    }

    /* ===== IMAGE ===== */
    .post-thumb {
        width: 100%;
        max-height: 420px;
        object-fit: cover;
        border-radius: 18px;
        margin-bottom: 40px;
        box-shadow: 0 14px 35px rgba(0,0,0,0.12);
    }

    /* ===== CONTENT ===== */
    .post-content {
        font-size: 16px;
        line-height: 1.85;
        color: #444;
    }

        .post-content p {
            margin-bottom: 18px;
        }

        .post-content h2,
        .post-content h3,
        .post-content h4 {
            color: var(--text-dark);
            margin: 32px 0 16px;
            font-weight: 600;
            line-height: 1.4;
        }

        .post-content h2 {
            font-size: 24px;
        }

        .post-content h3 {
            font-size: 20px;
        }

        .post-content ul,
        .post-content ol {
            margin: 16px 0 20px 24px;
        }

        .post-content li {
            margin-bottom: 8px;
        }

        .post-content img {
            max-width: 100%;
            border-radius: 14px;
            margin: 24px 0;
        }

        .post-content blockquote {
            border-left: 4px solid var(--primary);
            padding: 14px 18px;
            margin: 24px 0;
            background: #fafafa;
            color: #555;
            font-style: italic;
        }

    /* ===== BACK LINK ===== */
    .post-back {
        display: inline-block;
        margin-top: 50px;
        text-decoration: none;
        font-weight: 600;
        font-size: 14px;
        color: var(--primary);
    }

        .post-back:hover {
            text-decoration: underline;
        }

        .post-title

    {
        font-size: 28px;
    }

    .post-thumb {
        max-height: 260px;
    }

    }
</style>

<div class="post-wrapper">

    <h1 class="post-title">
        @Model.TieuDe
    </h1>

    <div class="post-meta">
        @Model.NgayDang?.ToString("dd/MM/yyyy") • TQbeauty
    </div>

    @{
        string imgSrc = null;
        if (!string.IsNullOrEmpty(Model.HinhAnh))
        {
            var h = Model.HinhAnh;
            if (h.StartsWith("/") || h.StartsWith("http", StringComparison.OrdinalIgnoreCase))
            {
                imgSrc = h;
            }
            else
            {
                imgSrc = Url.Content($"~/uploads/bai-viet/{h}");
            }
        }
    }

    @if (!string.IsNullOrEmpty(imgSrc))
    {
        <img src="@imgSrc"
             alt="@Model.TieuDe"
             class="post-thumb" />
    }

    <div class="post-content">
        @Html.Raw(Model.NoiDung)
    </div>

    <a asp-action="Index" class="post-back">
        ← Quay lại danh sách tin tức
    </a>

</div>
