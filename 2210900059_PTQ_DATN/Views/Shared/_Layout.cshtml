@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - TQbeauty</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600;700&family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">

    <!-- CSS -->
    <link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>
<body>

    <!-- HEADER / MENU -->
    <header class="header">
        <div class="header-inner">
            <div class="logo">
                <a asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" alt="Leskin" style="height: 100px; width: auto;" />
                </a>
            </div>

            <nav class="main-nav">
                <ul>
                    <li><a asp-controller="Home" asp-action="Index">TRANG CHỦ</a></li>
                    <li><a asp-controller="Home" asp-action="GioiThieu">GIỚI THIỆU</a></li>
                    <li><a asp-controller="DichVu" asp-action="Index">DỊCH VỤ</a></li>
                    <li><a asp-controller="SanPham" asp-action="Index">SẢN PHẨM</a></li>
                    <li><a asp-controller="TinTuc" asp-action="Index">TIN TỨC</a></li>
                    <li><a asp-controller="SuKien" asp-action="Index">SỰ KIỆN</a></li>
                    <li><a asp-controller="LienHe" asp-action="Index">LIÊN HỆ</a></li>
                </ul>
            </nav>
            

            <div class="nav-icons">
                @if (Context.Session.GetString("TenDangNhap") == null)
                {
                    <!-- CHƯA ĐĂNG NHẬP -->
                    <button class="icon"
                            title="Đăng nhập"
                            onclick="location.href='@Url.Action("Login", "TaiKhoan")'">
                        👤
                    </button>

                    <button class="icon"
                            title="Đăng ký"
                            onclick="location.href='@Url.Action("Register", "TaiKhoan")'">
                        📝
                    </button>
                }
                else
                {
                    <!-- ĐÃ ĐĂNG NHẬP -->
                    <div class="user-menu-icons">
                        <span class="welcome-text">
                            Xin chào, <strong>@Context.Session.GetString("TenDangNhap")</strong>
                        </span>

                        <!-- SỬA THÔNG TIN -->
                        <a asp-controller="TaiKhoan"
                           asp-action="Edit"
                           title="Chỉnh sửa thông tin cá nhân"
                           class="icon-btn">
                            ⚙️
                        </a>

                        <!-- ĐĂNG XUẤT -->
                        <a asp-controller="TaiKhoan"
                           asp-action="Logout"
                           title="Đăng xuất"
                           class="icon-btn logout">
                            🚪
                        </a>
                    </div>
                }
            </div>



        </div>
    </header>
    
    <div class="accent-line"></div>

    <!-- NỘI DUNG TRANG -->
    @RenderBody()

    <!-- JS -->
    <script src="~/js/index.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
    @await Html.PartialAsync("_Partners")
    @await Html.PartialAsync("_Footer")


</body>
</html>

