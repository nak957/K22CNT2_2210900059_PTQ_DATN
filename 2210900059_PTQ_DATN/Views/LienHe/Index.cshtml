@model _2210900059_PTQ_DATN.Models.LienHe

@{
    ViewData["Title"] = "Liên hệ";
}

<section class="contact-page">
    <div class="container">

        <h1 class="contact-title">Liên hệ với chúng tôi</h1>
        <p class="contact-desc">
            Nếu bạn cần tư vấn về dịch vụ hoặc sản phẩm, vui lòng để lại thông tin.
            Đội ngũ TQbeauty sẽ liên hệ với bạn trong thời gian sớm nhất.
        </p>

        @if (TempData["success"] != null)
        {
            <div class="alert-success">
                @TempData["success"]
            </div>
        }

        <form asp-action="Index" method="post" class="contact-form">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label>Họ và tên *</label>
                <input asp-for="HoTen" class="form-control" placeholder="Nhập họ tên" />
                <span asp-validation-for="HoTen" class="text-danger"></span>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label>Email</label>
                    <input asp-for="Email" class="form-control" placeholder="email@example.com" />
                </div>

                <div class="form-group">
                    <label>Số điện thoại</label>
                    <input asp-for="SoDienThoai" class="form-control" placeholder="VD: 0904xxxxxx" />
                </div>
            </div>

            <div class="form-group">
                <label>Địa chỉ</label>
                <input asp-for="DiaChi" class="form-control" placeholder="Địa chỉ (không bắt buộc)" />
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label>Loại liên hệ</label>
                    <select asp-for="LoaiLienHe" class="form-control">
                        <option value="">-- Chọn loại liên hệ --</option>
                        <option value="Tư vấn dịch vụ">Tư vấn dịch vụ</option>
                        <option value="Tư vấn sản phẩm">Tư vấn sản phẩm</option>
                        <option value="Khiếu nại">Khiếu nại</option>
                        <option value="Khác">Khác</option>
                    </select>
                </div>

                <div class="form-group">
                    <label>Tiêu đề</label>
                    <input asp-for="TieuDe" class="form-control" placeholder="Tiêu đề liên hệ" />
                </div>
            </div>

            <div class="form-group">
                <label>Nội dung *</label>
                <textarea asp-for="NoiDung" class="form-control textarea"
                          placeholder="Nhập nội dung liên hệ..."></textarea>
                <span asp-validation-for="NoiDung" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-submit">
                Gửi liên hệ
            </button>
        </form>

    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .contact-page {
        padding: 60px 15px;
        background: #fff;
    }

        .contact-page .container {
            max-width: 800px;
            margin: auto;
        }

    .contact-title {
        text-align: center;
        font-size: 32px;
        color: #6b4a2b;
        margin-bottom: 10px;
    }

    .contact-desc {
        text-align: center;
        color: #777;
        margin-bottom: 40px;
        line-height: 1.7;
    }

    .alert-success {
        background: #e6f7ee;
        color: #2f7a4f;
        padding: 12px;
        border-radius: 6px;
        margin-bottom: 20px;
        text-align: center;
    }

    .contact-form {
        background: #fafafa;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 8px 20px rgba(0,0,0,0.05);
    }

    .form-group {
        margin-bottom: 18px;
    }

    .form-row {
        display: flex;
        gap: 15px;
    }

        .form-row .form-group {
            flex: 1;
        }

    label {
        font-weight: 600;
        margin-bottom: 6px;
        display: block;
    }

    .form-control {
        width: 100%;
        padding: 10px 12px;
        border: 1px solid #ddd;
        border-radius: 6px;
        font-size: 15px;
    }

        .form-control:focus {
            outline: none;
            border-color: #c58a3d;
        }

    .textarea {
        min-height: 120px;
        resize: vertical;
    }

    .btn-submit {
        width: 100%;
        padding: 12px;
        background: #c58a3d;
        color: #fff;
        border: none;
        border-radius: 6px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: 0.3s;
    }

        .btn-submit:hover {
            background: #a97430;
        }

    .text-danger {
        font-size: 13px;
        color: #d9534f;
    }


    {
        flex-direction: column;
    }

