@model List<_2210900059_PTQ_DATN.Models.DonHang>

@{
    ViewData["Title"] = "Đơn hàng của tôi";
}

<style>
:root {
    --primary: #d98b2b;
}

/* ================= SECTION ================= */
.section {
    padding: 60px 0;
    background: #fff;
}

.section-title {
    font-size: 28px;
    font-weight: 700;
    margin-bottom: 30px;
}

/* ================= LOOKUP FORM ================= */
.order-lookup {
    background: #fff;
    border-radius: 18px;
    box-shadow: 0 12px 30px rgba(0,0,0,0.08);
    padding: 24px;
    margin-bottom: 30px;
}

.order-lookup h4 {
    font-size: 16px;
    margin-bottom: 14px;
    font-weight: 600;
}

.lookup-row {
    display: grid;
    grid-template-columns: 1fr 1fr auto;
    gap: 14px;
}

.order-lookup input {
    padding: 12px 16px;
    border-radius: 999px;
    border: 1px solid #ddd;
    font-size: 14px;
}

.order-lookup button {
    padding: 12px 28px;
    border-radius: 999px;
    border: none;
    background: var(--primary);
    color: #fff;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    white-space: nowrap;
}

.order-lookup button:hover {
    background: #b97824;
    box-shadow: 0 10px 22px rgba(217,139,43,0.35);
}

/* ================= TABLE CARD ================= */
.order-wrapper {
    background: #fff;
    border-radius: 18px;
    box-shadow: 0 12px 30px rgba(0,0,0,0.08);
    padding: 24px;
}

/* ================= TABLE ================= */
.table {
    width: 100%;
    border-collapse: collapse;
}

.table th {
    padding: 14px;
    font-size: 12px;
    text-transform: uppercase;
    background: var(--primary);
    color: #fff;
    text-align: left;
}

.table td {
    padding: 16px 14px;
    border-bottom: 1px solid #eee;
}

.table tbody tr {
    transition: transform 0.25s ease, box-shadow 0.25s ease;
}

.table tbody tr:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 24px rgba(0,0,0,0.08);
}

/* ================= STATUS ================= */
.order-status.pending { color: #e67e22; font-weight: 600; }
.order-status.completed { color: #27ae60; font-weight: 600; }
.order-status.canceled { color: #e74c3c; font-weight: 600; }

/* ================= ACTION ================= */
.order-view {
    padding: 8px 18px;
    border-radius: 999px;
    border: 1px solid var(--primary);
    color: var(--primary);
    text-decoration: none;
    font-weight: 600;
    transition: all 0.25s ease;
}

.order-view:hover {
    background: var(--primary);
    color: #fff;
}

/* ================= EMPTY ================= */
.empty-order {
    text-align: center;
    padding: 80px 0;
    color: #666;
}


</style>

<section class="section">
    <div class="container">

        <h2 class="section-title">Đơn hàng của tôi</h2>

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }

        @if (!Context.Session.Keys.Contains("MaNguoiDung"))
        {
            <form asp-action="TraCuu" method="post" class="order-lookup">
                <h4>Tra cứu đơn hàng</h4>

                <div class="lookup-row">
                    <input type="text" name="maDonHangCode" placeholder="Mã đơn hàng" required />
                    <input type="text" name="soDienThoai" placeholder="Số điện thoại" required />
                    <button type="submit">Tra cứu</button>
                </div>
            </form>
        }

        @if (!Model.Any())
        {
            <div class="empty-order">
                Chưa có đơn hàng nào.
            </div>
        }
        else
        {
            <div class="order-wrapper">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Mã đơn</th>
                            <th>Ngày đặt</th>
                            <th>Tổng tiền</th>
                            <th>Trạng thái</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td data-label="Mã đơn">@item.MaDonHangCode</td>
                                <td data-label="Ngày đặt">@item.NgayDat?.ToString("dd/MM/yyyy HH:mm")</td>
                                <td data-label="Tổng tiền">@item.TongTien?.ToString("N0") đ</td>
                                <td data-label="Trạng thái">
                                    <span class="order-status @(item.TrangThai == "Chờ xử lý" ? "pending" :
                                                               item.TrangThai == "Hoàn tất" ? "completed" : "canceled")">
                                        @item.TrangThai
                                    </span>
                                </td>
                                <td>
                                    <a asp-action="ChiTiet"
                                       asp-route-id="@item.MaDonHang"
                                       class="order-view">
                                        Xem
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }

    </div>
</section>


