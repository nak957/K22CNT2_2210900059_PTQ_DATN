@model _2210900059_PTQ_DATN.ViewModels.DonHangDichVuVM

@{
    ViewData["Title"] = "Chi tiết lịch hẹn";
}

<div class="container mt-4">

    <h2 class="mb-4">Chi tiết lịch hẹn</h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <table class="table table-bordered">
        <tr>
            <th width="200">Mã đơn hàng</th>
            <td>@Model.MaDonHangCode</td>
        </tr>
        <tr>
            <th>Dịch vụ</th>
            <td>@Model.TenDichVu</td>
        </tr>
        <tr>
            <th>Số lượng</th>
            <td>@Model.SoLuong</td>
        </tr>
        <tr>
            <th>Ngày hẹn</th>
            <td>@Model.NgayHen.ToString("dd/MM/yyyy")</td>
        </tr>
        <tr>
            <th>Giờ hẹn</th>
            <td>@Model.GioHen</td>
        </tr>
        <tr>
            <th>Trạng thái</th>
            <td>
                <span class="badge
                    @(Model.TrangThai == "Chờ xử lý" ? "bg-warning text-dark" :
                                            Model.TrangThai == "Đã hủy" ? "bg-danger" : "bg-success")">
                    @Model.TrangThai
                </span>
            </td>
        </tr>
    </table>

    <div class="mt-3">
        <a asp-action="DichVu" class="btn btn-secondary">
            Quay lại danh sách
        </a>

        @if (Model.TrangThai == "Chờ xử lý")
        {
            <form asp-action="HuyLichHen"
                  method="post"
                  class="d-inline"
                  onsubmit="return confirm('Bạn chắc chắn muốn hủy lịch hẹn này?');">
                <input type="hidden" name="maDonHang" value="@Model.MaDonHang" />
                <button type="submit" class="btn btn-danger">
                    Hủy lịch hẹn
                </button>
            </form>
        }
    </div>
</div>
