@model _2210900059_PTQ_DATN.Models.DanhMucDichVu

@{
    ViewData["Title"] = "Create";
}

<div class="layout-content-container flex flex-col w-full max-w-[720px] px-6 py-10 gap-8">
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-black text-[#171118] dark:text-white">Thêm danh mục</h1>
            <p class="text-sm text-gray-500 dark:text-gray-400">Add a new service category</p>
        </div>
        <a asp-action="Index" class="text-sm text-gray-600 hover:text-primary">quay lại</a>
    </div>

    <div class="bg-white dark:bg-background-dark p-6 rounded-2xl border border-[#e4dbe6] dark:border-[#3a2a3d] shadow-sm">
        <form asp-action="Create" class="space-y-4">
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm"></div>

            <div>
                <label asp-for="TenDanhMuc" class="block text-sm font-medium text-gray-700 dark:text-gray-300"></label>
                <input asp-for="TenDanhMuc" class="form-input mt-1 block w-full rounded-lg border border-[#e4dbe6] px-3 py-2 bg-[#f8f6f8] dark:bg-[#2d1b31] text-[#171118] dark:text-white" />
                <span asp-validation-for="TenDanhMuc" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="Slug" class="block text-sm font-medium text-gray-700 dark:text-gray-300"></label>
                <input asp-for="Slug" class="form-input mt-1 block w-full rounded-lg border border-[#e4dbe6] px-3 py-2 bg-[#f8f6f8] dark:bg-[#2d1b31] text-[#171118] dark:text-white" />
                <span asp-validation-for="Slug" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="MoTa" class="block text-sm font-medium text-gray-700 dark:text-gray-300"></label>
                <input asp-for="MoTa" class="form-input mt-1 block w-full rounded-lg border border-[#e4dbe6] px-3 py-2 bg-[#f8f6f8] dark:bg-[#2d1b31] text-[#171118] dark:text-white" />
                <span asp-validation-for="MoTa" class="text-red-500 text-sm"></span>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label asp-for="MaNguoiTao" class="block text-sm font-medium text-gray-700 dark:text-gray-300"></label>
                    <select asp-for="MaNguoiTao" asp-items="ViewBag.MaNguoiTao" class="form-select mt-1 block w-full rounded-lg border border-[#e4dbe6] bg-[#f8f6f8] dark:bg-[#2d1b31] text-[#171118] dark:text-white px-3 py-2"></select>
                    <span asp-validation-for="MaNguoiTao" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label asp-for="MaNguoiCapNhat" class="block text-sm font-medium text-gray-700 dark:text-gray-300"></label>
                    <select asp-for="MaNguoiCapNhat" asp-items="ViewBag.MaNguoiCapNhat" class="form-select mt-1 block w-full rounded-lg border border-[#e4dbe6] bg-[#f8f6f8] dark:bg-[#2d1b31] text-[#171118] dark:text-white px-3 py-2"></select>
                    <span asp-validation-for="MaNguoiCapNhat" class="text-red-500 text-sm"></span>
                </div>
            </div>

            <div class="pt-2">
                <input type="submit"
                       value="Thêm"
                       class="rounded-xl h-12 px-6
                      bg-purple-600 text-white font-bold
                      hover:bg-purple-700
                      transition
                      shadow-md shadow-purple-600/30" />

            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
