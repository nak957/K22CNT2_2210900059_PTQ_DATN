@model _2210900059_PTQ_DATN.Models.DichVu


@{
    ViewData["Title"] = "Chi tiết dịch vụ";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Chi tiết dịch vụ</h4>
        </div>

        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Tên dịch vụ</dt>
                <dd class="col-sm-9 fw-bold">@Model.TenDichVu</dd>

                <dt class="col-sm-3">Slug</dt>
                <dd class="col-sm-9">@Model.Slug</dd>

                <dt class="col-sm-3">Loại dịch vụ</dt>
                <dd class="col-sm-9">@Model.LoaiDichVu</dd>

                <dt class="col-sm-3">Công nghệ</dt>
                <dd class="col-sm-9">@Model.CongNghe</dd>

                <dt class="col-sm-3">Thời lượng</dt>
                <dd class="col-sm-9">@Model.ThoiLuong</dd>

                <dt class="col-sm-3">Số buổi</dt>
                <dd class="col-sm-9">@Model.SoBuoi</dd>

                <dt class="col-sm-3">Đối tượng phù hợp</dt>
                <dd class="col-sm-9">@Model.DoiTuongPhuHop</dd>

                <dt class="col-sm-3">Vùng tác động</dt>
                <dd class="col-sm-9">@Model.VungTacDong</dd>

                <dt class="col-sm-3">Mô tả ngắn</dt>
                <dd class="col-sm-9">@Model.MoTaNgan</dd>

                <dt class="col-sm-3">Nội dung chi tiết</dt>
                <dd class="col-sm-9">@Html.Raw(Model.NoiDungChiTiet)</dd>

                <dt class="col-sm-3">Hình ảnh</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.HinhAnh))
                    {
                        <img src="~/uploads/@Model.HinhAnh"
                             class="img-thumbnail"
                             style="max-width:250px" />
                    }
                    else
                    {
                        <span class="text-muted">Không có hình ảnh</span>
                    }
                </dd>

                <dt class="col-sm-3">Giá</dt>
                <dd class="col-sm-9 text-danger fw-bold">
                    @String.Format("{0:N0} đ", Model.Gia)
                </dd>

                <dt class="col-sm-3">Nổi bật</dt>
                <dd class="col-sm-9">
                    @(Model.NoiBat == true ? "Có" : "Không")
                </dd>

                <dt class="col-sm-3">Trạng thái</dt>
                <dd class="col-sm-9">
                    @(Model.TrangThai == true ? "Hoạt động" : "Ẩn")
                </dd>


                <dt class="col-sm-3">Danh mục</dt>
                <dd class="col-sm-9">
                    @Model.MaDanhMucDvNavigation?.MaDanhMucDv
                </dd>

                <dt class="col-sm-3">Người tạo</dt>
                <dd class="col-sm-9">
                    @Model.MaNguoiTaoNavigation?.MaNguoiDung
                </dd>

                <dt class="col-sm-3">Người cập nhật</dt>
                <dd class="col-sm-9">
                    @Model.MaNguoiCapNhatNavigation?.MaNguoiDung
                </dd>

                <dt class="col-sm-3">Ngày tạo</dt>
                <dd class="col-sm-9">
                    @Model.NgayTao?.ToString("dd/MM/yyyy HH:mm")
                </dd>
            </dl>

            <div class="mt-4">
                <a asp-action="Edit"
                   asp-route-id="@Model.MaDichVu"
                   class="btn btn-warning">
                    Chỉnh sửa
                </a>

                <a asp-action="Index"
                   class="btn btn-secondary ms-2">
                    Quay lại danh sách
                </a>
            </div>
        </div>
    </div>
</div>
