@model _2210900059_PTQ_DATN.Models.DichVu

@{
    ViewData["Title"] = "Xóa dịch vụ";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Xác nhận xóa dịch vụ</h4>
        </div>

        <div class="card-body">
            <p class="text-danger fw-bold">
                Bạn có chắc chắn muốn xóa dịch vụ này không? Hành động này không thể hoàn tác.
            </p>

            <dl class="row">
                <dt class="col-sm-3">Tên dịch vụ</dt>
                <dd class="col-sm-9">@Model.TenDichVu</dd>

                <dt class="col-sm-3">Slug</dt>
                <dd class="col-sm-9">@Model.Slug</dd>

                <dt class="col-sm-3">Loại dịch vụ</dt>
                <dd class="col-sm-9">@Model.LoaiDichVu</dd>

                <dt class="col-sm-3">Công nghệ</dt>
                <dd class="col-sm-9">@Model.CongNghe</dd>

                <dt class="col-sm-3">Thời lượng</dt>
                <dd class="col-sm-9">@Model.ThoiLuong</dd>

                <dt class="col-sm-3">Số buổi</dt>
                <dd class="col-sm-9">@Model.SoBuoi</dd>

                <dt class="col-sm-3">Đối tượng phù hợp</dt>
                <dd class="col-sm-9">@Model.DoiTuongPhuHop</dd>

                <dt class="col-sm-3">Vùng tác động</dt>
                <dd class="col-sm-9">@Model.VungTacDong</dd>

                <dt class="col-sm-3">Mô tả ngắn</dt>
                <dd class="col-sm-9">@Model.MoTaNgan</dd>

                <dt class="col-sm-3">Giá</dt>
                <dd class="col-sm-9 text-danger fw-bold">
                    @String.Format("{0:N0} đ", Model.Gia)
                </dd>

                <dt class="col-sm-3">Nổi bật</dt>
                <dd class="col-sm-9">
                    @(Model.NoiBat == true ? "Có" : "Không")
                </dd>

                <dt class="col-sm-3">Trạng thái</dt>
                <dd class="col-sm-9">
                    @(Model.TrangThai == true ? "Hoạt động" : "Ẩn")
                </dd>


                <dt class="col-sm-3">Hình ảnh</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.HinhAnh))
                    {
                        <img src="~/uploads/@Model.HinhAnh"
                             class="img-thumbnail"
                             style="max-width:200px" />
                    }
                </dd>
            </dl>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="MaDichVu" />
                <a asp-action="Index"
                   class="h-12 px-6 rounded-xl border border-[#e4dbe6]
                      flex items-center justify-center
                      text-gray-600 hover:bg-gray-100 transition">
                    Hủy bỏ
                </a>

                <button type="submit"
                        class="h-12 px-8 rounded-xl
                           bg-red-600 text-white font-bold
                           hover:bg-red-700 transition
                           shadow-lg shadow-red-500/20">
                    Xóa vĩnh viễn
                </button>
            </form>
        </div>
    </div>
</div>
