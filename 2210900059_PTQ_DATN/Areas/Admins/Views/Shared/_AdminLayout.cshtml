@{
    var title = ViewData["Title"] ?? "Admin";
    var currentArea = (ViewContext.RouteData.Values["area"] ?? "").ToString();
    var currentController = (ViewContext.RouteData.Values["controller"] ?? "").ToString();
    var currentAction = (ViewContext.RouteData.Values["action"] ?? "").ToString();

    Func<string, string> activeFor = ctrl =>
        string.Equals(ctrl, currentController, StringComparison.OrdinalIgnoreCase)
            ? "nav-link flex items-center gap-3 px-4 py-3 rounded-lg bg-primary text-white shadow-md shadow-primary/20"
            : "nav-link flex items-center gap-3 px-4 py-3 rounded-lg text-slate-600 dark:text-zinc-400 hover:bg-slate-100 dark:hover:bg-zinc-800 transition-colors";
}
<!DOCTYPE html>
<html class="light" lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title - Admin</title>

    <!-- Fallback CSS for sidebar active state (applies immediately even if Tailwind loads deferred) -->
    <style>
        /* basic nav-link layout so items remain visible before Tailwind loads */
        .admin-sidebar { font-family: Manrope, system-ui, -apple-system, "Segoe UI", Roboto, Arial; }
        .admin-sidebar .nav-link { display:flex; align-items:center; gap:.75rem; padding:.75rem 1rem; border-radius:.5rem; color:#334155; text-decoration:none; }
        .admin-sidebar .nav-link .material-symbols-outlined { color:inherit; }
        .admin-sidebar .nav-link:hover { background:#f1f5f9; color:#0f172a; }
        /* active fallback */
        .admin-sidebar .nav-link.active,
        .admin-sidebar .nav-link[aria-current="page"] {
            background: #c813ec; /* match Tailwind primary */
            color: #ffffff !important;
            box-shadow: 0 8px 18px rgba(200,19,236,0.08);
        }
        .admin-sidebar .nav-link.active .material-symbols-outlined,
        .admin-sidebar .nav-link[aria-current="page"] .material-symbols-outlined {
            color: inherit;
        }
        /* ensure children inherit color */
        .admin-sidebar .nav-link * { color: inherit; }
    </style>

    <!-- Tailwind + plugins (kept deferred for performance) -->
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries" defer></script>

    <!-- Fonts & Material Symbols -->
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@300;400;500;600;700;800&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet" />

    <script id="tailwind-config">
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#c813ec",
                        "background-light": "#f8f6f8",
                        "background-dark": "#1f1022",
                    },
                    fontFamily: {
                        "display": ["Manrope", "ui-sans-serif", "system-ui"]
                    },
                    borderRadius: {"DEFAULT": "0.25rem", "lg": "0.5rem", "xl": "0.75rem", "full": "9999px"},
                },
            },
        }
    </script>

    <style>
        .material-symbols-outlined {
            font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
        }
        body { font-family: Manrope, system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial; }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body class="bg-background-light dark:bg-background-dark font-display text-slate-900 dark:text-slate-100 antialiased min-h-screen">
    <div class="flex h-screen overflow-hidden">

        <!-- Sidebar -->
        <aside class="admin-sidebar w-64 flex-shrink-0 bg-white dark:bg-zinc-900 border-r border-slate-200 dark:border-zinc-800 flex flex-col justify-between p-6">
            <div class="flex flex-col gap-8">
                <!-- Brand -->
                <div class="flex items-center gap-3">
                    <div class="bg-primary/10 rounded-xl p-2">
                        <span class="material-symbols-outlined text-primary" style="font-size: 28px;">spa</span>
                    </div>
                    <div class="flex flex-col">
                        <h1 class="text-slate-900 dark:text-white text-lg font-bold leading-tight">LESKIN Admin</h1>
                        <p class="text-slate-500 dark:text-zinc-400 text-xs font-medium uppercase tracking-wider">Management</p>
                    </div>
                </div>

                <!-- Nav Items -->
                <nav class="flex flex-col gap-2" role="navigation" aria-label="Admin main navigation">
                    <a asp-area="Admins" asp-controller="Home" asp-action="Index"
                       class='@activeFor("Home")'
                       aria-current="@(string.Equals(currentController, "Home", StringComparison.OrdinalIgnoreCase) ? "page" : null)">
                        <span class="material-symbols-outlined">dashboard</span>
                        <p class="text-sm font-semibold">Dashboard</p>
                    </a>

                    <a asp-area="Admins" asp-controller="NguoiDungs" asp-action="Index"
                       class='@activeFor("NguoiDungs")'
                       aria-current="@(string.Equals(currentController, "NguoiDungs", StringComparison.OrdinalIgnoreCase) ? "page" : null)">
                        <span class="material-symbols-outlined">group</span>
                        <p class="text-sm font-medium">Người dùng</p>
                    </a>

                    <a asp-area="Admins" asp-controller="DanhMucSanPhams" asp-action="Index"
                       class='@activeFor("DanhMucSanPhams")'
                       aria-current="@(string.Equals(currentController, "DanhMucSanPhams", StringComparison.OrdinalIgnoreCase) ? "page" : null)">
                        <span class="material-symbols-outlined">category</span>
                        <p class="text-sm font-medium">Danh mục sản phẩm</p>
                    </a>

                    <a asp-area="Admins" asp-controller="SanPhams" asp-action="Index"
                       class='@activeFor("SanPhams")'
                       aria-current="@(string.Equals(currentController, "SanPhams", StringComparison.OrdinalIgnoreCase) ? "page" : null)">
                        <span class="material-symbols-outlined">inventory_2</span>
                        <p class="text-sm font-medium">Sản phẩm</p>
                    </a>

                    <a asp-area="Admins" asp-controller="DanhMucDichVus" asp-action="Index"
                       class='@activeFor("DanhMucDichVus")'
                       aria-current="@(string.Equals(currentController, "DanhMucDichVus", StringComparison.OrdinalIgnoreCase) ? "page" : null)">
                        <span class="material-symbols-outlined">sell</span>
                        <p class="text-sm font-medium">Danh mục dịch vụ</p>
                    </a>

                    <a asp-area="Admins" asp-controller="DichVus" asp-action="Index"
                       class='@activeFor("DichVus")'
                       aria-current="@(string.Equals(currentController, "DichVus", StringComparison.OrdinalIgnoreCase) ? "page" : null)">
                        <span class="material-symbols-outlined">build</span>
                        <p class="text-sm font-medium">Dịch vụ</p>
                    </a>

                    <a asp-area="Admins" asp-controller="DonHangs" asp-action="Index"
                       class='@activeFor("DonHangs")'
                       aria-current="@(string.Equals(currentController, "DonHangs", StringComparison.OrdinalIgnoreCase) ? "page" : null)">
                        <span class="material-symbols-outlined">receipt_long</span>
                        <p class="text-sm font-medium">Đơn hàng</p>
                    </a>

                    

                    <a asp-area="Admins" asp-controller="GioHangs" asp-action="Index"
                       class='@activeFor("GioHangs")'
                       aria-current="@(string.Equals(currentController, "GioHangs", StringComparison.OrdinalIgnoreCase) ? "page" : null)">
                        <span class="material-symbols-outlined">shopping_cart</span>
                        <p class="text-sm font-medium">Giỏ hàng</p>
                    </a>

                    

                    <a asp-area="Admins" asp-controller="LienHes" asp-action="Index"
                       class='@activeFor("LienHes")'
                       aria-current="@(string.Equals(currentController, "LienHes", StringComparison.OrdinalIgnoreCase) ? "page" : null)">
                        <span class="material-symbols-outlined">mail</span>
                        <p class="text-sm font-medium">Liên hệ</p>
                    </a>

                    <a asp-area="Admins" asp-controller="BaiViets" asp-action="Index"
                       class='@activeFor("BaiViets")'
                       aria-current="@(string.Equals(currentController, "BaiViets", StringComparison.OrdinalIgnoreCase) ? "page" : null)">
                        <span class="material-symbols-outlined">article</span>
                        <p class="text-sm font-medium">Bài viết</p>
                    </a>

                    <a asp-area="Admins" asp-controller="TrangNoiDungs" asp-action="Index"
                       class='@activeFor("TrangNoiDungs")'
                       aria-current="@(string.Equals(currentController, "TrangNoiDungs", StringComparison.OrdinalIgnoreCase) ? "page" : null)">
                        <span class="material-symbols-outlined">description</span>
                        <p class="text-sm font-medium">Trang nội dung</p>
                    </a>
                </nav>
            </div>

            <div class="flex flex-col gap-3">
                <a asp-area=""
                   asp-controller="TaiKhoan"
                   asp-action="Logout"
                   class="flex items-center gap-3 text-sm text-red-600 hover:underline">
                    <span class="material-symbols-outlined">logout</span>
                    Đăng xuất
                </a>
            </div>
        </aside>

        <!-- Main content -->
        <main class="flex-1 flex flex-col overflow-y-auto">
            <!-- Top nav -->
            <header class="sticky top-0 z-30 flex items-center justify-between bg-white/80 dark:bg-zinc-900/80 backdrop-blur-md border-b border-slate-200 dark:border-zinc-800 px-6 py-3">
                <div class="flex items-center gap-6">
                    <h2 class="text-slate-900 dark:text-white text-xl font-extrabold tracking-tight">@title</h2>
                    <div class="hidden md:flex items-center">
                        <label class="relative block">
                            <span class="absolute inset-y-0 left-0 flex items-center pl-3">
                                <span class="material-symbols-outlined text-slate-400 text-sm">search</span>
                            </span>
                            <input class="w-64 pl-10 pr-4 py-2 bg-slate-100 dark:bg-zinc-800 border-none rounded-lg text-sm placeholder:text-slate-500 focus:ring-2 focus:ring-primary/50 transition-all"
                                   placeholder="Tìm kiếm..." type="text" />
                        </label>
                    </div>
                </div>

                <div class="flex items-center gap-3">
                    <button class="p-2 text-slate-500 hover:bg-slate-100 dark:hover:bg-zinc-800 rounded-lg relative transition-colors">
                        <span class="material-symbols-outlined">notifications</span>
                        <span class="absolute top-0 right-0 w-2 h-2 bg-red-500 border-2 border-white dark:border-zinc-900 rounded-full"></span>
                    </button>
                    <div class="flex items-center gap-3 ml-4 cursor-pointer group">
                        <div class="flex flex-col text-right">
                            <p class="text-sm font-bold text-slate-900 dark:text-white">Admin</p>
                            <p class="text-xs text-slate-500 font-medium">Manager</p>
                        </div>
                        <div class="bg-center bg-no-repeat aspect-square bg-cover rounded-full h-10 w-10 border-2 border-primary/20 group-hover:border-primary transition-all"
                             style='background-image: url("/images/avatar-placeholder.png");'></div>
                    </div>
                </div>
            </header>

            <!-- Body -->
            <div class="p-6">
                @RenderBody()
            </div>
        </main>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
