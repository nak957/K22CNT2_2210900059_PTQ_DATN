@model _2210900059_PTQ_DATN.Models.GioHangChiTiet

@{
    ViewData["Title"] = "Delete";
}

<h1>Xóa mục trong giỏ hàng</h1>

<h4>Chi tiết mục</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <dl class="row">
            <dt class="col-sm-3">Mã mục</dt>
            <dd class="col-sm-9">@Model.MaCt</dd>

            <dt class="col-sm-3">Loại</dt>
            <dd class="col-sm-9">@ViewBag.ItemLoai</dd>

            <dt class="col-sm-3">Mã Item</dt>
            <dd class="col-sm-9">@Model.MaItem</dd>

            <dt class="col-sm-3">Tên Item</dt>
            <dd class="col-sm-9">@ViewBag.ItemName</dd>

            <dt class="col-sm-3">Hình ảnh</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty((string)ViewBag.ItemImage))
                {
                    <img src="@(Url.Content("~/images/products/" + (string)ViewBag.ItemImage))" alt="@ViewBag.ItemName" style="max-width:200px;"/>
                }
                else
                {
                    <span>(không có ảnh)</span>
                }
            </dd>

            <dt class="col-sm-3">Số lượng</dt>
            <dd class="col-sm-9">@Model.SoLuong</dd>

            <dt class="col-sm-3">Đơn giá</dt>
            <dd class="col-sm-9">@Model.DonGia.ToString("N0") đ</dd>

            <dt class="col-sm-3">Thành tiền</dt>
            <dd class="col-sm-9">@Model.ThanhTien?.ToString("N0") đ</dd>

            <dt class="col-sm-3">Ghi chú</dt>
            <dd class="col-sm-9">@Model.GhiChu</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="MaCt" />
            <button type="submit" class="btn btn-danger">Xác nhận xóa</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Hủy</a>
        </form>
    </div>
</div>
