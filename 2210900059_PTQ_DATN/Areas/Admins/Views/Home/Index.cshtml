@{
    ViewData["Title"] = "Trang quản trị";
    Layout = "_AdminLayout";
}

<div class="space-y-8">

    <!-- HEADER -->
    <div class="flex justify-between items-center">
        <div>
            <h1 class="text-2xl font-extrabold text-gray-800">Dashboard</h1>
            <p class="text-sm text-gray-500 mt-1">
                Trang tổng quan hệ thống
            </p>
        </div>
    </div>

    <!-- STAT CARDS -->
    <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 gap-6">

        <!-- NGƯỜI DÙNG -->
        <a asp-area="Admins"
           asp-controller="NguoiDungs"
           asp-action="Index"
           class="block">

            <div class="bg-white rounded-xl p-6 border shadow-sm hover:shadow-md transition cursor-pointer">
                <div class="flex items-center justify-between mb-4">
                    <div class="p-2 bg-indigo-100 rounded-lg">
                        <span class="material-symbols-outlined text-indigo-600">group</span>
                    </div>
                    <span class="text-emerald-500 text-xs font-bold bg-emerald-100 px-2 py-1 rounded">
                        +0%
                    </span>
                </div>
                <p class="text-sm text-gray-500 uppercase tracking-wide">Người dùng</p>
                <p class="text-3xl font-extrabold text-gray-800 mt-1">
                    @ViewBag.TongNguoiDung
                </p>
            </div>
        </a>

        <!-- SẢN PHẨM -->
        <a asp-area="Admins"
           asp-controller="SanPhams"
           asp-action="Index"
           class="block">

            <div class="bg-white rounded-xl p-6 border shadow-sm hover:shadow-md transition cursor-pointer">
                <div class="flex items-center justify-between mb-4">
                    <div class="p-2 bg-green-100 rounded-lg">
                        <span class="material-symbols-outlined text-green-600">inventory_2</span>
                    </div>
                    <span class="text-emerald-500 text-xs font-bold bg-emerald-100 px-2 py-1 rounded">
                        +0%
                    </span>
                </div>
                <p class="text-sm text-gray-500 uppercase tracking-wide">Sản phẩm</p>
                <p class="text-3xl font-extrabold text-gray-800 mt-1">
                    @ViewBag.TongSanPham
                </p>
            </div>
        </a>

        <!-- ĐƠN HÀNG -->
        <a asp-area="Admins"
           asp-controller="DonHangs"
           asp-action="Index"
           class="block">

            <div class="bg-white rounded-xl p-6 border shadow-sm hover:shadow-md transition cursor-pointer">
                <div class="flex items-center justify-between mb-4">
                    <div class="p-2 bg-amber-100 rounded-lg">
                        <span class="material-symbols-outlined text-amber-600">receipt_long</span>
                    </div>
                    <span class="text-emerald-500 text-xs font-bold bg-emerald-100 px-2 py-1 rounded">
                        +0%
                    </span>
                </div>
                <p class="text-sm text-gray-500 uppercase tracking-wide">Đơn hàng</p>
                <p class="text-3xl font-extrabold text-gray-800 mt-1">
                    @ViewBag.TongDonHang
                </p>
            </div>
        </a>

        <!-- LIÊN HỆ -->
        <a asp-area="Admins"
           asp-controller="LienHes"
           asp-action="Index"
           class="block">

            <div class="bg-white rounded-xl p-6 border shadow-sm hover:shadow-md transition cursor-pointer">
                <div class="flex items-center justify-between mb-4">
                    <div class="p-2 bg-rose-100 rounded-lg">
                        <span class="material-symbols-outlined text-rose-600">mail</span>
                    </div>
                    <span class="text-emerald-500 text-xs font-bold bg-emerald-100 px-2 py-1 rounded">
                        +0%
                    </span>
                </div>
                <p class="text-sm text-gray-500 uppercase tracking-wide">Liên hệ</p>
                <p class="text-3xl font-extrabold text-gray-800 mt-1">
                    @ViewBag.TongLienHe
                </p>
            </div>
        </a>

    </div>

    <!-- GIỚI THIỆU -->
    <div class="bg-white rounded-xl border shadow-sm overflow-hidden">
        <div class="px-6 py-4 border-b font-bold text-gray-800">
            Giới thiệu
        </div>
        <div class="px-6 py-4 text-gray-700 space-y-3">
            <p>
                Đây là trang quản trị hệ thống. Tại đây, quản trị viên có thể:
            </p>
            <ul class="list-disc list-inside space-y-1">
                <li>Quản lý người dùng</li>
                <li>Quản lý danh mục</li>
                <li>Quản lý sản phẩm</li>
                <li>Quản lý đơn hàng</li>
                <li>Xem liên hệ &amp; nội dung</li>
            </ul>
            <p>
                Vui lòng chọn chức năng ở menu bên trái.
            </p>
        </div>
    </div>

</div>
