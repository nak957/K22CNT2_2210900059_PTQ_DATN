@model IEnumerable<_2210900059_PTQ_DATN.Models.DonHang>

@{
    ViewData["Title"] = "Quản lý đơn hàng";
}

<div class="max-w-7xl mx-auto">

    <!-- HEADER -->
    <div class="flex items-center justify-between mb-8">
        <div>
            <h1 class="text-3xl font-black text-[#171118]">
                Quản lý đơn hàng
            </h1>
            <p class="text-gray-500 mt-1">
                Danh sách các đơn hàng trong hệ thống
            </p>
        </div>

        <a asp-action="Create"
           class="flex items-center gap-2 rounded-xl h-12 px-6
                  bg-purple-600 text-white text-base font-bold
                  hover:bg-purple-700
                  shadow-lg shadow-purple-600/30
                  transition">
            <span class="material-symbols-outlined">add_circle</span>
            <span>Thêm đơn hàng</span>
        </a>
    </div>

    <!-- TABLE CARD -->
    <div class="bg-white rounded-2xl border border-[#e4dbe6] shadow-sm overflow-x-auto">

        <table class="min-w-full text-sm">
            <thead class="bg-gray-50 text-gray-600">
                <tr>
                    <th class="px-4 py-3 text-left">Mã đơn</th>
                    <th class="px-4 py-3 text-left">Khách hàng</th>
                    <th class="px-4 py-3 text-left">Điện thoại</th>
                    <th class="px-4 py-3 text-right">Tổng tiền</th>
                    <th class="px-4 py-3 text-center">Thanh toán</th>
                    <th class="px-4 py-3 text-center">Trạng thái</th>
                    <th class="px-4 py-3 text-center">Ngày đặt</th>
                    <th class="px-4 py-3 text-center">Thao tác</th>
                </tr>
            </thead>

            <tbody class="divide-y">
                @foreach (var item in Model)
                {
                    <tr class="hover:bg-gray-50">

                        <td class="px-4 py-3 font-semibold text-[#171118]">
                            @item.MaDonHangCode
                        </td>

                        <td class="px-4 py-3">
                            @item.HoTen
                        </td>

                        <td class="px-4 py-3">
                            @item.SoDienThoai
                        </td>

                        <td class="px-4 py-3 text-right font-semibold text-red-600">
                            @string.Format("{0:N0} ₫", item.TongTien)
                        </td>

                        <!-- THANH TOÁN -->
                        <td class="px-4 py-3 text-center">
                            @if (item.TrangThaiThanhToan == "1")
                            {
                                <span class="px-3 py-1 rounded-full text-xs
                                                     bg-green-100 text-green-700 font-semibold">
                                    Đã thanh toán
                                </span>
                            }
                            else
                            {
                                <span class="px-3 py-1 rounded-full text-xs
                                                     bg-yellow-100 text-yellow-700 font-semibold">
                                    Chưa thanh toán
                                </span>
                            }
                        </td>

                        <!-- TRẠNG THÁI -->
                        <td class="px-4 py-3 text-center">
                            @if (item.TrangThai == "1")
                            {
                                <span class="px-3 py-1 rounded-full text-xs
                                                     bg-blue-100 text-blue-700 font-semibold">
                                    Đang xử lý
                                </span>
                            }
                            else
                            {
                                <span class="px-3 py-1 rounded-full text-xs
                                                     bg-gray-100 text-gray-600 font-semibold">
                                    Đã hủy
                                </span>
                            }
                        </td>

                        <td class="px-4 py-3 text-center text-gray-500">
                            @item.NgayDat?.ToString("dd/MM/yyyy")
                        </td>

                        <!-- ACTION -->
                        <td class="px-4 py-3 text-center whitespace-nowrap">
                            <a asp-action="Details"
                               asp-route-id="@item.MaDonHang"
                               class="text-blue-600 hover:underline mr-3">
                                Xem
                            </a>

                            <a asp-action="Edit"
                               asp-route-id="@item.MaDonHang"
                               class="text-yellow-600 hover:underline mr-3">
                                Sửa
                            </a>

                            <a asp-action="Delete"
                               asp-route-id="@item.MaDonHang"
                               class="text-red-600 hover:underline">
                                Xóa
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
