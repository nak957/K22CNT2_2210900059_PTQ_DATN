@model _2210900059_PTQ_DATN.Models.DonHang

@{
    ViewData["Title"] = "Chỉnh sửa đơn hàng";
}

<div class="flex justify-center">
    <div class="w-full max-w-[1000px] bg-white dark:bg-background-dark
                border border-[#e4dbe6] dark:border-[#3a2a3d]
                rounded-2xl shadow-sm p-8">

        <!-- Tiêu đề -->
        <div class="mb-8">
            <h1 class="text-3xl font-black text-[#171118] dark:text-white">
                Chỉnh sửa đơn hàng
            </h1>
            <p class="text-gray-500 dark:text-gray-400 mt-1">
                Cập nhật thông tin đơn hàng
            </p>
        </div>

        <!-- Form -->
        <form asp-action="Edit" class="space-y-6">
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm"></div>

            <input type="hidden" asp-for="MaDonHang" />

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

                <div>
                    <label asp-for="MaDonHangCode" class="block text-sm font-bold mb-2">
                        Mã đơn hàng
                    </label>
                    <input asp-for="MaDonHangCode"
                           class="w-full h-12 rounded-xl border border-[#e4dbe6]
                                  px-4 bg-[#f8f6f8]" />
                </div>

                <div>
                    <label asp-for="HoTen" class="block text-sm font-bold mb-2">
                        Họ và tên
                    </label>
                    <input asp-for="HoTen"
                           class="w-full h-12 rounded-xl border border-[#e4dbe6]
                                  px-4 bg-[#f8f6f8]" />
                </div>

                <div>
                    <label asp-for="SoDienThoai" class="block text-sm font-bold mb-2">
                        Số điện thoại
                    </label>
                    <input asp-for="SoDienThoai"
                           class="w-full h-12 rounded-xl border border-[#e4dbe6]
                                  px-4 bg-[#f8f6f8]" />
                </div>

                <div>
                    <label asp-for="Email" class="block text-sm font-bold mb-2">
                        Email
                    </label>
                    <input asp-for="Email"
                           class="w-full h-12 rounded-xl border border-[#e4dbe6]
                                  px-4 bg-[#f8f6f8]" />
                </div>

                <div class="md:col-span-2">
                    <label asp-for="DiaChi" class="block text-sm font-bold mb-2">
                        Địa chỉ giao hàng
                    </label>
                    <input asp-for="DiaChi"
                           class="w-full h-12 rounded-xl border border-[#e4dbe6]
                                  px-4 bg-[#f8f6f8]" />
                </div>

                <div>
                    <label asp-for="TongTien" class="block text-sm font-bold mb-2">
                        Tổng tiền
                    </label>
                    <input asp-for="TongTien"
                           class="w-full h-12 rounded-xl border border-[#e4dbe6]
                                  px-4 bg-[#f8f6f8]" />
                </div>

                <div>
                    <label asp-for="PhiVanChuyen" class="block text-sm font-bold mb-2">
                        Phí vận chuyển
                    </label>
                    <input asp-for="PhiVanChuyen"
                           class="w-full h-12 rounded-xl border border-[#e4dbe6]
                                  px-4 bg-[#f8f6f8]" />
                </div>

                <div>
                    <label asp-for="PhuongThucThanhToan" class="block text-sm font-bold mb-2">
                        Phương thức thanh toán
                    </label>
                    <input asp-for="PhuongThucThanhToan"
                           class="w-full h-12 rounded-xl border border-[#e4dbe6]
                                  px-4 bg-[#f8f6f8]" />
                </div>

                <!-- 🔽 TRẠNG THÁI THANH TOÁN -->
                <div>
                    <label asp-for="TrangThaiThanhToan" class="block text-sm font-bold mb-2">
                        Trạng thái thanh toán
                    </label>
                    <select asp-for="TrangThaiThanhToan"
                            class="w-full h-12 rounded-xl border border-[#e4dbe6]
                                   px-4 bg-[#f8f6f8]">
                        <option value="Chưa thanh toán">Chưa thanh toán</option>
                        <option value="Đã thanh toán">Đã thanh toán</option>
                    </select>
                </div>

                <!-- 🔽 TRẠNG THÁI ĐƠN HÀNG -->
                <div>
                    <label asp-for="TrangThai" class="block text-sm font-bold mb-2">
                        Trạng thái đơn hàng
                    </label>
                    <select asp-for="TrangThai"
                            class="w-full h-12 rounded-xl border border-[#e4dbe6]
                                   px-4 bg-[#f8f6f8]">
                        <option value="Đang xử lý">Đang xử lý</option>
                        <option value="Đã hủy">Đã hủy</option>
                    </select>
                </div>

                <div class="md:col-span-2">
                    <label asp-for="GhiChu" class="block text-sm font-bold mb-2">
                        Ghi chú
                    </label>
                    <textarea asp-for="GhiChu"
                              class="w-full min-h-[100px] rounded-xl border border-[#e4dbe6]
                                     px-4 py-3 bg-[#f8f6f8]"></textarea>
                </div>

                <div>
                    <label asp-for="NgayDat" class="block text-sm font-bold mb-2">
                        Ngày đặt
                    </label>
                    <input asp-for="NgayDat"
                           class="w-full h-12 rounded-xl border border-[#e4dbe6]
                                  px-4 bg-[#f8f6f8]" />
                </div>

                <div>
                    <label asp-for="NgayCapNhat" class="block text-sm font-bold mb-2">
                        Ngày cập nhật
                    </label>
                    <input asp-for="NgayCapNhat"
                           class="w-full h-12 rounded-xl border border-[#e4dbe6]
                                  px-4 bg-[#f8f6f8]" />
                </div>

                <div>
                    <label asp-for="MaNguoiDung" class="block text-sm font-bold mb-2">
                        Người dùng
                    </label>
                    <select asp-for="MaNguoiDung"
                            asp-items="ViewBag.MaNguoiDung"
                            class="w-full h-12 rounded-xl border border-[#e4dbe6]
                                   px-4 bg-[#f8f6f8]">
                    </select>
                </div>
            </div>

            <!-- Hành động -->
            <div class="flex justify-between items-center pt-6 border-t border-[#e4dbe6]">
                <a asp-action="Index"
                   class="text-gray-500 hover:text-primary">
                    ← Quay lại danh sách
                </a>

                <button type="submit"
                        class="h-12 px-8 rounded-xl
                               bg-primary text-white font-bold
                               hover:brightness-110 transition">
                    Lưu thay đổi
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
