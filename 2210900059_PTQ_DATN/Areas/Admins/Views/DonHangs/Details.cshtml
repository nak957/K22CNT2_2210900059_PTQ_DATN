@model _2210900059_PTQ_DATN.Models.DonHang

@{
    ViewData["Title"] = "Chi tiết đơn hàng";
}

<div class="flex justify-center py-10">
    <div class="w-full max-w-4xl bg-white dark:bg-background-dark rounded-2xl shadow-lg border border-[#e4dbe6] dark:border-[#3a2a3d]">

        <!-- Header -->
        <div class="px-8 py-6 border-b border-[#e4dbe6] dark:border-[#3a2a3d]">
            <h1 class="text-2xl font-black text-[#171118] dark:text-white flex items-center gap-2">
                <span class="material-symbols-outlined text-primary">receipt_long</span>
                Chi tiết đơn hàng
            </h1>
            <p class="text-gray-500 mt-1">
                Thông tin chi tiết của đơn hàng trong hệ thống
            </p>
        </div>

        <!-- Nội dung -->
        <div class="px-8 py-6">
            <dl class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-4">

                <div>
                    <dt class="text-sm font-semibold text-gray-500">Mã đơn hàng</dt>
                    <dd class="text-base font-bold text-primary">
                        @Html.DisplayFor(model => model.MaDonHangCode)
                    </dd>
                </div>

                <div>
                    <dt class="text-sm font-semibold text-gray-500">Họ và tên</dt>
                    <dd class="text-base">@Html.DisplayFor(model => model.HoTen)</dd>
                </div>

                <div>
                    <dt class="text-sm font-semibold text-gray-500">Số điện thoại</dt>
                    <dd class="text-base">@Html.DisplayFor(model => model.SoDienThoai)</dd>
                </div>

                <div>
                    <dt class="text-sm font-semibold text-gray-500">Email</dt>
                    <dd class="text-base">@Html.DisplayFor(model => model.Email)</dd>
                </div>

                <div class="md:col-span-2">
                    <dt class="text-sm font-semibold text-gray-500">Địa chỉ giao hàng</dt>
                    <dd class="text-base">@Html.DisplayFor(model => model.DiaChi)</dd>
                </div>

                <div>
                    <dt class="text-sm font-semibold text-gray-500">Tổng tiền</dt>
                    <dd class="text-lg font-bold text-primary">
                        @Html.DisplayFor(model => model.TongTien)
                    </dd>
                </div>

                <div>
                    <dt class="text-sm font-semibold text-gray-500">Phí vận chuyển</dt>
                    <dd class="text-base">@Html.DisplayFor(model => model.PhiVanChuyen)</dd>
                </div>

                <div>
                    <dt class="text-sm font-semibold text-gray-500">Phương thức thanh toán</dt>
                    <dd class="text-base">@Html.DisplayFor(model => model.PhuongThucThanhToan)</dd>
                </div>

                <div>
                    <dt class="text-sm font-semibold text-gray-500">Trạng thái thanh toán</dt>
                    <dd class="text-base">@Html.DisplayFor(model => model.TrangThaiThanhToan)</dd>
                </div>

                <div>
                    <dt class="text-sm font-semibold text-gray-500">Trạng thái đơn hàng</dt>
                    <dd class="text-base">@Html.DisplayFor(model => model.TrangThai)</dd>
                </div>

                <div>
                    <dt class="text-sm font-semibold text-gray-500">Ngày đặt hàng</dt>
                    <dd class="text-base">@Html.DisplayFor(model => model.NgayDat)</dd>
                </div>

                <div>
                    <dt class="text-sm font-semibold text-gray-500">Ngày cập nhật</dt>
                    <dd class="text-base">@Html.DisplayFor(model => model.NgayCapNhat)</dd>
                </div>

                <div class="md:col-span-2">
                    <dt class="text-sm font-semibold text-gray-500">Ghi chú</dt>
                    <dd class="text-base">@Html.DisplayFor(model => model.GhiChu)</dd>
                </div>

                <div>
                    <dt class="text-sm font-semibold text-gray-500">Mã người dùng</dt>
                    <dd class="text-base">
                        @Html.DisplayFor(model => model.MaNguoiDungNavigation.MaNguoiDung)
                    </dd>
                </div>

            </dl>
        </div>

        <!-- Hành động -->
        <div class="px-8 py-6 border-t border-[#e4dbe6] dark:border-[#3a2a3d] flex justify-between items-center">

            <a asp-action="Index"
               class="inline-flex items-center gap-2 px-5 h-11 rounded-xl border border-gray-300 text-gray-600 hover:bg-gray-100 transition">
                <span class="material-symbols-outlined text-sm">arrow_back</span>
                Quay lại danh sách
            </a>


        </div>
    </div>
</div>
