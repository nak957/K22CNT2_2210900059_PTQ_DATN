@model _2210900059_PTQ_DATN.Models.SanPham

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<!-- Nếu _Layout đã có Tailwind thì bỏ -->
<script src="https://cdn.tailwindcss.com"></script>

<div class="max-w-5xl mx-auto px-6 py-8">

    <!-- Header -->
    <div class="mb-6">
        <h1 class="text-3xl font-extrabold text-sky-600">Chi tiết sản phẩm</h1>
        <p class="text-gray-500 mt-1">
            Thông tin chi tiết đầy đủ của sản phẩm trong hệ thống
        </p>
    </div>

    <!-- Card -->
    <div class="bg-white rounded-2xl shadow border border-sky-200 p-8">

        <!-- Thông tin cơ bản -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 text-sm">

            <div>
                <span class="font-semibold text-gray-600">Tên sản phẩm</span>
                <p class="text-gray-800 mt-1">@Model.TenSanPham</p>
            </div>

            <div>
                <span class="font-semibold text-gray-600">Slug</span>
                <p class="text-gray-800 mt-1">@Model.Slug</p>
            </div>

            <div>
                <span class="font-semibold text-gray-600">Loại sản phẩm</span>
                <p class="text-gray-800 mt-1">@Model.LoaiSanPham</p>
            </div>

            <div>
                <span class="font-semibold text-gray-600">Thương hiệu</span>
                <p class="text-gray-800 mt-1">@Model.ThuongHieu</p>
            </div>

            <div>
                <span class="font-semibold text-gray-600">Dung tích</span>
                <p class="text-gray-800 mt-1">@Model.DungTich</p>
            </div>

            <div>
                <span class="font-semibold text-gray-600">Đối tượng sử dụng</span>
                <p class="text-gray-800 mt-1">@Model.DoiTuongSuDung</p>
            </div>

            <div>
                <span class="font-semibold text-gray-600">Công dụng chính</span>
                <p class="text-gray-800 mt-1">@Model.CongDungChinh</p>
            </div>

            <div>
                <span class="font-semibold text-gray-600">Thành phần nổi bật</span>
                <p class="text-gray-800 mt-1">@Model.ThanhPhanNoiBat</p>
            </div>

            <div>
                <span class="font-semibold text-gray-600">Giá bán</span>
                <p class="text-red-600 font-bold mt-1">
                    @Model.Gia.ToString("N0") VNĐ
                </p>
            </div>

            <div>
                <span class="font-semibold text-gray-600">Sản phẩm nổi bật</span>
                <p class="text-gray-800 mt-1">
                    @(Model.NoiBat == true ? "Có" : "Không")
                </p>
            </div>

            <div>
                <span class="font-semibold text-gray-600">Trạng thái</span>
                <p class="text-gray-800 mt-1">
                    @(Model.TrangThai == true ? "Đang bán" : "Ngừng bán")
                </p>
            </div>

            <div>
                <span class="font-semibold text-gray-600">Ngày tạo</span>
                <p class="text-gray-800 mt-1">@Model.NgayTao</p>
            </div>
        </div>

        <!-- Mô tả -->
        <div class="mt-6 space-y-4 text-sm">
            <div>
                <span class="font-semibold text-gray-600">Mô tả ngắn</span>
                <p class="text-gray-800 mt-1">@Model.MoTaNgan</p>
            </div>

            <div>
                <span class="font-semibold text-gray-600">Mô tả chi tiết</span>
                <p class="text-gray-800 mt-1">@Model.MoTaChiTiet</p>
            </div>
        </div>

        <!-- Hình ảnh -->
        <div class="mt-6">
            <span class="font-semibold text-gray-600 block mb-2">Hình ảnh sản phẩm</span>

            @if (!string.IsNullOrEmpty(Model.HinhAnh))
            {
                <img src="~/images/products/@Model.HinhAnh"
                     class="h-32 rounded-xl border object-cover" />
            }
            else
            {
                <span class="text-gray-400 text-sm">Không có hình ảnh</span>
            }
        </div>

        <!-- Quan hệ -->
        <div class="mt-6 grid grid-cols-1 md:grid-cols-2 gap-6 text-sm">
            <div>
                <span class="font-semibold text-gray-600">Danh mục</span>
                <p class="text-gray-800 mt-1">
                    @Model.MaDanhMucNavigation?.MaDanhMuc
                </p>
            </div>

            <div>
                <span class="font-semibold text-gray-600">Người tạo</span>
                <p class="text-gray-800 mt-1">
                    @Model.MaNguoiTaoNavigation?.MaNguoiDung
                </p>
            </div>

            <div>
                <span class="font-semibold text-gray-600">Người cập nhật</span>
                <p class="text-gray-800 mt-1">
                    @Model.MaNguoiCapNhatNavigation?.MaNguoiDung
                </p>
            </div>
        </div>

        <!-- Actions -->
        <div class="flex items-center justify-between pt-6 border-t mt-8">
            <a asp-action="Index"
               class="h-12 px-6 rounded-xl border border-[#e4dbe6]
                      flex items-center justify-center
                      text-gray-600 hover:bg-gray-100 transition">
                Quay lại
            </a>
        </div>

    </div>
</div>
