@model _2210900059_PTQ_DATN.Models.SanPham

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0">Chi tiết sản phẩm</h4>
        </div>

        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Tên sản phẩm</dt>
                <dd class="col-sm-9">@Model.TenSanPham</dd>

                <dt class="col-sm-3">Slug</dt>
                <dd class="col-sm-9">@Model.Slug</dd>

                <dt class="col-sm-3">Loại sản phẩm</dt>
                <dd class="col-sm-9">@Model.LoaiSanPham</dd>

                <dt class="col-sm-3">Thương hiệu</dt>
                <dd class="col-sm-9">@Model.ThuongHieu</dd>

                <dt class="col-sm-3">Dung tích</dt>
                <dd class="col-sm-9">@Model.DungTich</dd>

                <dt class="col-sm-3">Đối tượng sử dụng</dt>
                <dd class="col-sm-9">@Model.DoiTuongSuDung</dd>

                <dt class="col-sm-3">Công dụng chính</dt>
                <dd class="col-sm-9">@Model.CongDungChinh</dd>

                <dt class="col-sm-3">Thành phần nổi bật</dt>
                <dd class="col-sm-9">@Model.ThanhPhanNoiBat</dd>

                <dt class="col-sm-3">Mô tả ngắn</dt>
                <dd class="col-sm-9">@Model.MoTaNgan</dd>

                <dt class="col-sm-3">Mô tả chi tiết</dt>
                <dd class="col-sm-9">@Model.MoTaChiTiet</dd>

                <dt class="col-sm-3">Hình ảnh</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.HinhAnh))
                    {
                        <img src="~/images/products/@Model.HinhAnh"
                             class="img-thumbnail"
                             style="max-height:150px" />
                    }
                    else
                    {
                        <span class="text-muted">Không có hình ảnh</span>
                    }
                </dd>


                <dt class="col-sm-3">Giá</dt>
                <dd class="col-sm-9 fw-bold text-danger">
                    @Model.Gia.ToString("N0") VNĐ
                </dd>

                <dt class="col-sm-3">Nổi bật</dt>
                <dd class="col-sm-9">
                    @(Model.NoiBat == true ? "Có" : "Không")

                </dd>

                <dt class="col-sm-3">Ngày tạo</dt>
                <dd class="col-sm-9">@Model.NgayTao</dd>

                <dt class="col-sm-3">Trạng thái</dt>
                <dd class="col-sm-9">@Model.TrangThai</dd>

                <dt class="col-sm-3">Danh mục</dt>
                <dd class="col-sm-9">
                    @Model.MaDanhMucNavigation?.MaDanhMuc
                </dd>

                <dt class="col-sm-3">Người tạo</dt>
                <dd class="col-sm-9">
                    @Model.MaNguoiTaoNavigation?.MaNguoiDung
                </dd>

                <dt class="col-sm-3">Người cập nhật</dt>
                <dd class="col-sm-9">
                    @Model.MaNguoiCapNhatNavigation?.MaNguoiDung
                </dd>
            </dl>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-secondary">
                    ← Quay lại danh sách
                </a>

                
            </div>
        </div>
    </div>
</div>
