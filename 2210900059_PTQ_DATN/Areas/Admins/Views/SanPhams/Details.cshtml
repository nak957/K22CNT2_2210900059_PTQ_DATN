@model _2210900059_PTQ_DATN.Models.SanPham

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<script src="https://cdn.tailwindcss.com"></script>

<div class="max-w-5xl mx-auto px-6 py-8">

    <!-- Header -->
    <div class="mb-6">
        <h1 class="text-3xl font-extrabold text-gray-800">
            Chi tiết sản phẩm
        </h1>
        <p class="text-gray-500 mt-1">
            Thông tin chi tiết của sản phẩm
        </p>
    </div>

    <!-- Card -->
    <div class="bg-white rounded-2xl border border-gray-200 shadow p-8 space-y-6">

        <!-- Grid info -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

            <div>
                <label class="text-sm font-semibold text-gray-500">Danh mục</label>
                <div class="mt-1 text-gray-800 font-medium">
                    @Model.MaDanhMucNavigation?.TenDanhMuc
                </div>
            </div>

            <div>
                <label class="text-sm font-semibold text-gray-500">Tên sản phẩm</label>
                <div class="mt-1 text-gray-800 font-medium">
                    @Model.TenSanPham
                </div>
            </div>

            <div>
                <label class="text-sm font-semibold text-gray-500">Slug</label>
                <div class="mt-1 text-gray-800">
                    @Model.Slug
                </div>
            </div>

            <div>
                <label class="text-sm font-semibold text-gray-500">Loại sản phẩm</label>
                <div class="mt-1 text-gray-800">
                    @Model.LoaiSanPham
                </div>
            </div>

            <div>
                <label class="text-sm font-semibold text-gray-500">Thương hiệu</label>
                <div class="mt-1 text-gray-800">
                    @Model.ThuongHieu
                </div>
            </div>

            <div>
                <label class="text-sm font-semibold text-gray-500">Dung tích</label>
                <div class="mt-1 text-gray-800">
                    @Model.DungTich
                </div>
            </div>

            <div>
                <label class="text-sm font-semibold text-gray-500">Giá bán</label>
                <div class="mt-1 font-bold text-purple-600">
                    @String.Format("{0:N0} ₫", Model.Gia)
                </div>
            </div>

            <div>
                <label class="text-sm font-semibold text-gray-500">Tồn kho</label>
                <div class="mt-1 text-gray-800">
                    @Model.SoLuong
                </div>
            </div>
        </div>

        <!-- Mô tả -->
        <div>
            <label class="text-sm font-semibold text-gray-500">Mô tả ngắn</label>
            <div class="mt-1 text-gray-800 bg-gray-50 rounded-xl p-4">
                @Model.MoTaNgan
            </div>
        </div>

        <div>
            <label class="text-sm font-semibold text-gray-500">Mô tả chi tiết</label>
            <div class="mt-1 text-gray-800 bg-gray-50 rounded-xl p-4 whitespace-pre-line">
                @Model.MoTaChiTiet
            </div>
        </div>

        <!-- Hình ảnh -->
        <div>
            <label class="text-sm font-semibold text-gray-500 mb-2 block">
                Hình ảnh sản phẩm
            </label>

            @if (!string.IsNullOrEmpty(Model.HinhAnh))
            {
                <img src="~/images/products/@Model.HinhAnh"
                     class="h-48 rounded-xl border object-cover" />
            }
            else
            {
                <div class="text-gray-400 italic">
                    Chưa có hình ảnh
                </div>
            }
        </div>

        <!-- Actions -->
        <div class="flex justify-between pt-6 border-t">
            <a asp-action="Index"
               class="h-11 px-6 rounded-xl border flex items-center
                      text-gray-600 hover:bg-gray-100 transition">
                ← Quay lại
            </a>

            
        </div>

    </div>
</div>
