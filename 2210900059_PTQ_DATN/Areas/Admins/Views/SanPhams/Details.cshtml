@model _2210900059_PTQ_DATN.Models.SanPham

@{
    ViewData["Title"] = "Tạo sản phẩm";
}

<script src="https://cdn.tailwindcss.com"></script>

<div class="max-w-5xl mx-auto px-6 py-8">

    <div class="mb-6">
        <h1 class="text-3xl font-extrabold text-gray-800">Thêm sản phẩm mới</h1>
        <p class="text-gray-500 mt-1">Nhập thông tin chi tiết cho sản phẩm</p>
    </div>

    <div class="bg-white rounded-2xl shadow border border-gray-200 p-8">

        <form asp-action="Create" method="post" enctype="multipart/form-data" class="space-y-6">

            <div asp-validation-summary="ModelOnly"
                 class="rounded-lg bg-red-50 text-red-600 px-4 py-3 text-sm"></div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

                <!-- Danh mục -->
                <div>
                    <label asp-for="MaDanhMuc" class="block font-semibold text-gray-700 mb-1">Danh mục</label>
                    <select asp-for="MaDanhMuc" asp-items="ViewBag.MaDanhMuc"
                            class="w-full rounded-xl border-gray-300"></select>
                </div>

                <!-- Tên -->
                <div>
                    <label asp-for="TenSanPham" class="block font-semibold text-gray-700 mb-1">Tên sản phẩm</label>
                    <input asp-for="TenSanPham" class="w-full rounded-xl border-gray-300" />
                </div>

                <div>
                    <label asp-for="Slug" class="block font-semibold text-gray-700 mb-1">Slug</label>
                    <input asp-for="Slug" class="w-full rounded-xl border-gray-300" />
                </div>

                <div>
                    <label asp-for="LoaiSanPham" class="block font-semibold text-gray-700 mb-1">Loại sản phẩm</label>
                    <input asp-for="LoaiSanPham" class="w-full rounded-xl border-gray-300" />
                </div>

                <div>
                    <label asp-for="ThuongHieu" class="block font-semibold text-gray-700 mb-1">Thương hiệu</label>
                    <input asp-for="ThuongHieu" class="w-full rounded-xl border-gray-300" />
                </div>

                <div>
                    <label asp-for="DungTich" class="block font-semibold text-gray-700 mb-1">Dung tích</label>
                    <input asp-for="DungTich" class="w-full rounded-xl border-gray-300" />
                </div>

                <div>
                    <label asp-for="Gia" class="block font-semibold text-gray-700 mb-1">Giá bán (VNĐ)</label>
                    <input asp-for="Gia" type="number" min="0"
                           class="w-full rounded-xl border-gray-300" />
                </div>

                <!-- ✅ SỐ LƯỢNG -->
                <div>
                    <label asp-for="SoLuong" class="block font-semibold text-gray-700 mb-1">
                        Số lượng tồn kho
                    </label>
                    <input asp-for="SoLuong"
                           type="number"
                           min="0"
                           class="w-full rounded-xl border-gray-300" />
                </div>
            </div>

            <!-- Mô tả -->
            <div>
                <label asp-for="MoTaNgan" class="block font-semibold text-gray-700 mb-1">Mô tả ngắn</label>
                <textarea asp-for="MoTaNgan" rows="3"
                          class="w-full rounded-xl border-gray-300"></textarea>
            </div>

            <div>
                <label asp-for="MoTaChiTiet" class="block font-semibold text-gray-700 mb-1">Mô tả chi tiết</label>
                <textarea asp-for="MoTaChiTiet" rows="5"
                          class="w-full rounded-xl border-gray-300"></textarea>
            </div>

            <!-- Ảnh -->
            <div>
                <label class="block font-semibold text-gray-700 mb-1">Hình ảnh</label>
                <input type="file" name="HinhAnhFile"
                       accept="image/*"
                       class="w-full rounded-xl border-gray-300" />
            </div>

            <!-- Actions -->
            <div class="flex justify-between pt-6 border-t">
                <a asp-action="Index"
                   class="h-12 px-6 rounded-xl border flex items-center hover:bg-gray-100">
                    Quay lại
                </a>

                <button type="submit"
                        class="h-12 px-6 rounded-xl bg-purple-600 text-white font-bold hover:bg-purple-700">
                    ➕ Thêm sản phẩm
                </button>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
