@model _2210900059_PTQ_DATN.Models.SanPham

@{
    ViewData["Title"] = "Tạo sản phẩm";
}

<!-- Tailwind CDN (nếu _Layout đã có thì có thể bỏ) -->
<script src="https://cdn.tailwindcss.com"></script>

<div class="max-w-5xl mx-auto px-6 py-8">

    <!-- Header -->
    <div class="mb-6">
        <h1 class="text-3xl font-extrabold text-gray-800">Thêm sản phẩm mới</h1>
        <p class="text-gray-500 mt-1">Nhập thông tin chi tiết cho sản phẩm</p>
    </div>

    <!-- Form Card -->
    <div class="bg-white rounded-2xl shadow border border-gray-200 p-8">

        <form asp-action="Create"
              method="post"
              enctype="multipart/form-data"
              class="space-y-6">

            <div asp-validation-summary="ModelOnly"
                 class="rounded-lg bg-red-50 text-red-600 px-4 py-3 text-sm"></div>

            <!-- Grid -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

                <!-- Danh mục -->
                <div>
                    <label asp-for="MaDanhMuc"
                           class="block font-semibold text-gray-700 mb-1">Danh mục</label>
                    <select asp-for="MaDanhMuc"
                            asp-items="ViewBag.MaDanhMuc"
                            class="w-full rounded-xl border-gray-300 focus:border-purple-500 focus:ring-purple-500">
                    </select>
                    <span asp-validation-for="MaDanhMuc"
                          class="text-sm text-red-600"></span>
                </div>

                <!-- Tên sản phẩm -->
                <div>
                    <label asp-for="TenSanPham"
                           class="block font-semibold text-gray-700 mb-1">Tên sản phẩm</label>
                    <input asp-for="TenSanPham"
                           class="w-full rounded-xl border-gray-300 focus:border-purple-500 focus:ring-purple-500" />
                    <span asp-validation-for="TenSanPham"
                          class="text-sm text-red-600"></span>
                </div>

                <div>
                    <label asp-for="Slug"
                           class="block font-semibold text-gray-700 mb-1">Slug</label>
                    <input asp-for="Slug"
                           class="w-full rounded-xl border-gray-300" />
                </div>

                <div>
                    <label asp-for="LoaiSanPham"
                           class="block font-semibold text-gray-700 mb-1">Loại sản phẩm</label>
                    <input asp-for="LoaiSanPham"
                           class="w-full rounded-xl border-gray-300" />
                </div>

                <div>
                    <label asp-for="ThuongHieu"
                           class="block font-semibold text-gray-700 mb-1">Thương hiệu</label>
                    <input asp-for="ThuongHieu"
                           class="w-full rounded-xl border-gray-300" />
                </div>

                <div>
                    <label asp-for="DungTich"
                           class="block font-semibold text-gray-700 mb-1">Dung tích</label>
                    <input asp-for="DungTich"
                           class="w-full rounded-xl border-gray-300" />
                </div>

                <div>
                    <label asp-for="DoiTuongSuDung"
                           class="block font-semibold text-gray-700 mb-1">Đối tượng sử dụng</label>
                    <input asp-for="DoiTuongSuDung"
                           class="w-full rounded-xl border-gray-300" />
                </div>

                <div>
                    <label asp-for="Gia"
                           class="block font-semibold text-gray-700 mb-1">Giá bán (VNĐ)</label>
                    <input asp-for="Gia"
                           class="w-full rounded-xl border-gray-300" />
                </div>
            </div>

            <!-- Mô tả -->
            <div>
                <label asp-for="MoTaNgan"
                       class="block font-semibold text-gray-700 mb-1">Mô tả ngắn</label>
                <textarea asp-for="MoTaNgan"
                          rows="3"
                          class="w-full rounded-xl border-gray-300"></textarea>
            </div>

            <div>
                <label asp-for="MoTaChiTiet"
                       class="block font-semibold text-gray-700 mb-1">Mô tả chi tiết</label>
                <textarea asp-for="MoTaChiTiet"
                          rows="5"
                          class="w-full rounded-xl border-gray-300"></textarea>
            </div>

            <div>
                <label asp-for="CongDungChinh"
                       class="block font-semibold text-gray-700 mb-1">Công dụng chính</label>
                <input asp-for="CongDungChinh"
                       class="w-full rounded-xl border-gray-300" />
            </div>

            <div>
                <label asp-for="ThanhPhanNoiBat"
                       class="block font-semibold text-gray-700 mb-1">Thành phần nổi bật</label>
                <input asp-for="ThanhPhanNoiBat"
                       class="w-full rounded-xl border-gray-300" />
            </div>

            <!-- Hình ảnh -->
            <div>
                <label class="block font-semibold text-gray-700 mb-1">Hình ảnh sản phẩm</label>
                <input type="file"
                       name="HinhAnhFile"
                       class="w-full rounded-xl border-gray-300"
                       accept="image/*" />
            </div>

            <!-- Người tạo / cập nhật -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label asp-for="MaNguoiTao"
                           class="block font-semibold text-gray-700 mb-1">Người tạo</label>
                    <select asp-for="MaNguoiTao"
                            asp-items="ViewBag.MaNguoiTao"
                            class="w-full rounded-xl border-gray-300"></select>
                </div>

                <div>
                    <label asp-for="MaNguoiCapNhat"
                           class="block font-semibold text-gray-700 mb-1">Người cập nhật</label>
                    <select asp-for="MaNguoiCapNhat"
                            asp-items="ViewBag.MaNguoiCapNhat"
                            class="w-full rounded-xl border-gray-300"></select>
                </div>
            </div>

            <!-- Actions -->
            <div class="flex items-center justify-between pt-6 border-t">

                <a asp-action="Index"
                   class="h-12 px-6 rounded-xl border border-[#e4dbe6]
                          flex items-center justify-center
                          text-gray-600 hover:bg-gray-100 transition">
                    Quay lại
                </a>

                <input type="submit"
                       value="➕ Thêm sản phẩm"
                       class="rounded-xl h-12 px-6
                              bg-purple-600 text-white font-bold
                              hover:bg-purple-700
                              transition
                              shadow-md shadow-purple-600/30" />
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
