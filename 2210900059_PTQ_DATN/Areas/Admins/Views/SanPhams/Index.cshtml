@model IEnumerable<_2210900059_PTQ_DATN.Models.SanPham>

@{
    ViewData["Title"] = "Quản lý sản phẩm";
}

<!-- Tailwind CDN  -->
<script src="https://cdn.tailwindcss.com"></script>

<div class="max-w-7xl mx-auto px-6 py-8">

    <!-- HEADER -->
    <div class="flex flex-wrap items-center justify-between gap-4 mb-6">
        <div>
            <h1 class="text-3xl font-extrabold text-gray-800">
                Quản lý sản phẩm
            </h1>
            <p class="text-gray-500 mt-1">
                Danh sách toàn bộ sản phẩm trong hệ thống
            </p>
        </div>

        <a asp-action="Create"
           class="inline-flex items-center gap-2 px-5 h-11 rounded-xl
                  bg-purple-600 text-white font-semibold
                  hover:bg-purple-700 transition">
            <span>➕</span>
            Thêm sản phẩm mới
        </a>
    </div>

    <!-- 🔍 FILTER DANH MỤC  -->
    @{
        var danhMucs = ViewBag.DanhMucs as List<_2210900059_PTQ_DATN.Models.DanhMucSanPham>;
        int? maDanhMuc = ViewBag.MaDanhMuc as int?;
    }

    <form method="get"
          class="mb-6 bg-white border border-gray-200 rounded-2xl shadow-sm p-5">
        <div class="flex flex-wrap items-end gap-4">

            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-1">
                    Danh mục sản phẩm
                </label>

                <select name="maDanhMuc"
                        class="min-w-[240px] h-11 px-4 rounded-xl
                               border border-gray-300 bg-white
                               focus:outline-none focus:ring-2
                               focus:ring-purple-500 focus:border-purple-500">
                    <option value="">-- Tất cả danh mục --</option>

                    @if (danhMucs != null)
                    {
                        foreach (var dm in danhMucs)
                        {
                            <option value="@dm.MaDanhMuc"
                                    selected="@(maDanhMuc == dm.MaDanhMuc)">
                                @dm.TenDanhMuc
                            </option>
                        }
                    }
                </select>
            </div>

            <button type="submit"
                    class="h-11 px-6 rounded-xl font-semibold
                           bg-purple-600 text-white
                           hover:bg-purple-700 transition">
                🔍 Lọc
            </button>

            <a asp-action="Index"
               class="h-11 px-6 rounded-xl font-semibold
                      border border-gray-300 text-gray-600
                      hover:bg-gray-100 transition flex items-center">
                ⟳ Reset
            </a>
        </div>
    </form>

    <!-- TABLE -->
    <div class="bg-white rounded-2xl shadow border border-gray-200 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="min-w-full text-sm text-left">
                <thead class="bg-gray-100 border-b">
                    <tr class="text-gray-700 font-bold uppercase tracking-wide">
                        <th class="px-4 py-3">Tên sản phẩm</th>
                        <th class="px-4 py-3">Slug</th>
                        <th class="px-4 py-3">Loại</th>
                        <th class="px-4 py-3">Thương hiệu</th>
                        <th class="px-4 py-3">Dung tích</th>
                        <th class="px-4 py-3">Đối tượng</th>
                        <th class="px-4 py-3">Công dụng</th>
                        <th class="px-4 py-3">Thành phần</th>
                        <th class="px-4 py-3 text-right">Giá</th>
                        <th class="px-4 py-3 text-center">Số lượng</th>
                        <th class="px-4 py-3 text-center">Trạng thái</th>
                        <th class="px-4 py-3 text-center">Thao tác</th>
                    </tr>
                </thead>

                <tbody class="divide-y">
                    @foreach (var item in Model)
                    {
                        <tr class="hover:bg-purple-50 transition">
                            <td class="px-4 py-3 font-semibold text-gray-800">
                                @item.TenSanPham
                            </td>
                            <td class="px-4 py-3 text-gray-600">
                                @item.Slug
                            </td>
                            <td class="px-4 py-3">
                                @item.LoaiSanPham
                            </td>
                            <td class="px-4 py-3">
                                @item.ThuongHieu
                            </td>
                            <td class="px-4 py-3">
                                @item.DungTich
                            </td>
                            <td class="px-4 py-3">
                                @item.DoiTuongSuDung
                            </td>
                            <td class="px-4 py-3 max-w-xs truncate">
                                @item.CongDungChinh
                            </td>
                            <td class="px-4 py-3 max-w-xs truncate">
                                @item.ThanhPhanNoiBat
                            </td>
                            <td class="px-4 py-3 text-right font-semibold text-purple-600">
                                @String.Format("{0:N0} ₫", item.Gia)
                            </td>

                            <td class="px-4 py-3 text-center font-semibold">
                                @if (item.SoLuong > 0)
                                {
                                    <span class="text-green-600">@item.SoLuong</span>
                                }
                                else
                                {
                                    <span class="text-red-500 font-bold">Hết hàng</span>
                                }
                            </td>

                            <td class="px-4 py-3 text-center">
                                @if (item.TrangThai == true)
                                {
                                    <span class="px-3 py-1 text-xs font-bold rounded-full
                                                         bg-green-100 text-green-700">
                                        Đang bán
                                    </span>
                                }
                                else
                                {
                                    <span class="px-3 py-1 text-xs font-bold rounded-full
                                                         bg-red-100 text-red-600">
                                        Ngừng bán
                                    </span>
                                }
                            </td>

                            <td class="px-4 py-3">
                                <div class="flex justify-end gap-2">
                                    <a asp-action="Edit" asp-route-id="@item.MaSanPham"
                                       class="p-2 text-blue-600 hover:bg-blue-50 rounded-lg">
                                        ✏️
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.MaSanPham"
                                       class="p-2 text-gray-600 hover:bg-gray-100 rounded-lg">
                                        👁
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.MaSanPham"
                                       class="p-2 text-red-500 hover:bg-red-50 rounded-lg">
                                        🗑
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
