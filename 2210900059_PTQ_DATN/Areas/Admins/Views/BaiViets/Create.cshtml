@model _2210900059_PTQ_DATN.Models.BaiViet
@{
    ViewData["Title"] = "Thêm bài viết";
}

<div class="layout-content-container flex flex-col w-full max-w-[900px] px-6 py-10 gap-6 mx-auto">
    <div class="bg-white p-6 rounded-2xl border shadow-sm">
        <form asp-action="Create"
              method="post"
              enctype="multipart/form-data"
              class="grid gap-4">

            @Html.AntiForgeryToken()

            <div asp-validation-summary="All" class="text-red-500 text-sm"></div>

            <label>Tiêu đề</label>
            <input asp-for="TieuDe" class="rounded-lg border px-3 py-2" />

            <label>Slug</label>
            <input asp-for="Slug" class="rounded-lg border px-3 py-2" />

            <label>Ngày đăng</label>
            <input asp-for="NgayDang" type="date" class="rounded-lg border px-3 py-2" />

            <label>Hình ảnh</label>
            <input type="file" name="fileAnh" accept="image/*" class="rounded-lg border px-3 py-2" />

            <label>Mô tả</label>
            <input asp-for="MoTa" class="rounded-lg border px-3 py-2" />

            <label>Nội dung</label>
            <textarea asp-for="NoiDung" rows="6" class="rounded-lg border px-3 py-2"></textarea>

            <label>Loại</label>
            <select asp-for="Loai"
                    asp-items="ViewBag.Loai"
                    class="rounded-lg border px-3 py-2"></select>

            <!-- FIX CHUẨN: checkbox bool? -->
            <div class="flex items-center gap-2">
                <input type="checkbox" name="NoiBat" value="true" class="w-4 h-4" />
                <span>Nổi bật</span>
            </div>

            <button class="px-6 py-2 rounded-lg text-white font-bold"
                    style="background:#c813ec">
                Lưu bài viết
            </button>
        </form>
    </div>
</div>
