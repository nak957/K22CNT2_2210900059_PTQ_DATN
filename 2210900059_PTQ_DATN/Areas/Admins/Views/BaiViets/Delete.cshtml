@model _2210900059_PTQ_DATN.Models.BaiViet

@{
    ViewData["Title"] = "Delete Article";
}

<!DOCTYPE html>
<html lang="en" class="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@200..800&display=swap" rel="stylesheet">

    <!-- Material Symbols -->
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet">

    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: "#c813ec",
                        "background-light": "#f8f6f8"
                    },
                    fontFamily: {
                        display: ["Manrope"]
                    }
                }
            }
        }
    </script>

    <style>
        body {
            font-family: 'Manrope', sans-serif;
        }
    </style>
</head>

<body class="bg-background-light text-[#171118]">
    <main class="min-h-screen flex items-center justify-center px-6 py-10">
        <div class="w-full max-w-3xl bg-white rounded-2xl border border-[#e4dbe6] shadow-sm p-8">

            <!-- Header -->
            <div class="flex items-center gap-4 mb-6">
                <div class="size-12 rounded-xl bg-red-100 flex items-center justify-center text-red-600">
                    <span class="material-symbols-outlined text-2xl">Xóa bài viết</span>
                </div>
                <div>
                    <h1 class="text-2xl font-black">Delete Article</h1>
                    <p class="text-gray-500 text-sm">
                        Bạn có chắc muốn xóa bài viết này?
                    </p>
                </div>
            </div>

            <!-- Content -->
            <div class="rounded-xl border border-[#e4dbe6] divide-y">

                <div class="grid grid-cols-3 px-6 py-4">
                    <span class="font-semibold text-gray-600">Title</span>
                    <span class="col-span-2 font-bold">@Model.TieuDe</span>
                </div>

                <div class="grid grid-cols-3 px-6 py-4">
                    <span class="font-semibold text-gray-600">Slug</span>
                    <span class="col-span-2">@Model.Slug</span>
                </div>

                <div class="grid grid-cols-3 px-6 py-4">
                    <span class="font-semibold text-gray-600">Image</span>
                    <span class="col-span-2">@Model.HinhAnh</span>
                </div>

                <div class="grid grid-cols-3 px-6 py-4">
                    <span class="font-semibold text-gray-600">Description</span>
                    <span class="col-span-2">@Model.MoTa</span>
                </div>

                <div class="grid grid-cols-3 px-6 py-4">
                    <span class="font-semibold text-gray-600">Type</span>
                    <span class="col-span-2">@Model.Loai</span>
                </div>

                <div class="grid grid-cols-3 px-6 py-4">
                    <span class="font-semibold text-gray-600">Featured</span>
                    <span class="col-span-2">
                        @if (Model.NoiBat == true)
                        {
                            <span class="px-3 py-1 rounded-full bg-green-100 text-green-600 text-xs font-bold">
                                YES
                            </span>
                        }
                        else
                        {
                            <span class="px-3 py-1 rounded-full bg-gray-100 text-gray-500 text-xs font-bold">
                                NO
                            </span>
                        }
                    </span>
                </div>

                <div class="grid grid-cols-3 px-6 py-4">
                    <span class="font-semibold text-gray-600">Published Date</span>
                    <span class="col-span-2">@Model.NgayDang</span>
                </div>

                <div class="grid grid-cols-3 px-6 py-4">
                    <span class="font-semibold text-gray-600">Created By</span>
                    <span class="col-span-2">@Model.MaNguoiTaoNavigation?.MaNguoiDung</span>
                </div>

                <div class="grid grid-cols-3 px-6 py-4">
                    <span class="font-semibold text-gray-600">Updated By</span>
                    <span class="col-span-2">@Model.MaNguoiCapNhatNavigation?.MaNguoiDung</span>
                </div>
            </div>

            <!-- Actions -->
            <form asp-action="Delete" class="flex justify-between items-center mt-8">
                <input type="hidden" asp-for="MaBaiViet" />

                <a asp-action="Index"
                   class="px-6 h-11 flex items-center rounded-xl border border-[#e4dbe6] text-gray-600 hover:bg-gray-100 transition">
                    Quay lại
                </a>

                <button type="submit"
                        class="px-6 h-11 flex items-center gap-2 rounded-xl bg-red-600 text-white font-bold hover:bg-red-700 transition">
                    <span class="material-symbols-outlined text-sm">delete</span>
                    Xác nhận xóa
                </button>
            </form>

        </div>
    </main>
</body>
</html>
