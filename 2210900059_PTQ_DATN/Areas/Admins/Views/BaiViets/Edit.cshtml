@model _2210900059_PTQ_DATN.Models.BaiViet

@{
    ViewData["Title"] = "Chỉnh sửa bài viết";
}

<div class="layout-content-container flex flex-col w-full max-w-[900px] px-6 py-10 gap-6 mx-auto">
    <div class="flex items-center justify-between mb-4">
        <div>
            <h1 class="text-2xl font-extrabold text-[#171118] dark:text-white">Chỉnh sửa bài viết</h1>
            <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">Cập nhật thông tin bài viết</p>
        </div>
        <a asp-action="Index" class="text-sm text-slate-500 hover:underline">Quay lại danh sách</a>
    </div>

    <div class="bg-white dark:bg-background-dark p-6 rounded-2xl border border-[#e4dbe6] dark:border-[#3a2a3d] shadow-sm">
        <form asp-action="Edit" method="post" class="grid grid-cols-1 gap-4">
            @Html.AntiForgeryToken()
            <input asp-for="MaBaiViet" type="hidden" />

            <div asp-validation-summary="ModelOnly" class="text-sm text-red-600"></div>

            <div>
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Tiêu đề</label>
                <input asp-for="TieuDe" class="mt-2 block w-full rounded-lg border border-[#e4dbe6] px-3 py-2 bg-white dark:bg-[#1f1022] text-[#171118] dark:text-white" />
                <span asp-validation-for="TieuDe" class="text-sm text-red-500"></span>
            </div>

            <div class="grid grid-cols-2 gap-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Slug</label>
                    <input asp-for="Slug" class="mt-2 block w-full rounded-lg border border-[#e4dbe6] px-3 py-2 bg-white dark:bg-[#1f1022] text-[#171118] dark:text-white" />
                    <span asp-validation-for="Slug" class="text-sm text-red-500"></span>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Ngày đăng</label>
                    <input asp-for="NgayDang" id="NgayDangEdit" type="date" class="mt-2 block w-full rounded-lg border border-[#e4dbe6] px-3 py-2 bg-white dark:bg-[#1f1022] text-[#171118] dark:text-white" />
                    <span asp-validation-for="NgayDang" class="text-sm text-red-500"></span>
                </div>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Hình ảnh (URL)</label>
                <input asp-for="HinhAnh" id="HinhAnhEdit" class="mt-2 block w-full rounded-lg border border-[#e4dbe6] px-3 py-2 bg-white dark:bg-[#1f1022] text-[#171118] dark:text-white" />
                <span asp-validation-for="HinhAnh" class="text-sm text-red-500"></span>

                <div id="previewWrapEdit" class="mt-3 @(string.IsNullOrEmpty(Model?.HinhAnh) ? "hidden" : "")">
                    <p class="text-xs text-gray-500 mb-2">Preview:</p>
                    <div id="imgPreviewEdit" class="w-40 h-24 rounded-md overflow-hidden border bg-center bg-cover" style="background-image: url('@(string.IsNullOrEmpty(Model?.HinhAnh) ? "" : Url.Content(Model.HinhAnh))')"></div>
                </div>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Mô tả ngắn</label>
                <input asp-for="MoTa" class="mt-2 block w-full rounded-lg border border-[#e4dbe6] px-3 py-2 bg-white dark:bg-[#1f1022] text-[#171118] dark:text-white" />
                <span asp-validation-for="MoTa" class="text-sm text-red-500"></span>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Nội dung</label>
                <textarea asp-for="NoiDung" rows="6" class="mt-2 block w-full rounded-lg border border-[#e4dbe6] px-3 py-2 bg-white dark:bg-[#1f1022] text-[#171118] dark:text-white"></textarea>
                <span asp-validation-for="NoiDung" class="text-sm text-red-500"></span>
            </div>

            <div class="grid grid-cols-2 gap-4 items-end">
                <div>
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Loại</label>
                    <input asp-for="Loai" class="mt-2 block w-full rounded-lg border border-[#e4dbe6] px-3 py-2 bg-white dark:bg-[#1f1022] text-[#171118] dark:text-white" />
                    <span asp-validation-for="Loai" class="text-sm text-red-500"></span>
                </div>

                <div class="flex items-center gap-3">
                    @* hidden để submit false khi unchecked *@
                    <input type="hidden" name="NoiBat" value="false" />
                    <input id="NoiBatEdit" name="NoiBat" type="checkbox" value="true" class="h-4 w-4 text-primary rounded" @(Model?.NoiBat == true ? "checked" : "") />
                    <label for="NoiBatEdit" class="text-sm text-gray-700 dark:text-gray-300">Đánh dấu nổi bật</label>
                </div>
            </div>

            @if (ViewData["MaNguoiTao"] != null)
            {
                <div>
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Người tạo</label>
                        <select asp-for="MaNguoiTao" asp-items="@(ViewData["MaNguoiTao"] as SelectList)" class="mt-2 block w-full rounded-lg border border-[#e4dbe6] px-3 py-2 bg-white dark:bg-[#1f1022] text-[#171118]"></select>
                </div>
            }
            else
            {
                <input asp-for="MaNguoiTao" type="hidden" />
            }

            @if (ViewData["MaNguoiCapNhat"] != null)
            {
                <div>
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Người cập nhật</label>
                    <select asp-for="MaNguoiCapNhat" asp-items="@(ViewData["MaNguoiCapNhat"] as SelectList)" class="mt-2 block w-full rounded-lg border border-[#e4dbe6] px-3 py-2 bg-white dark:bg-[#1f1022] text-[#171118]"></select>
                </div>
            }
            else
            {
                <input asp-for="MaNguoiCapNhat" type="hidden" />
            }

            <div class="flex items-center justify-end gap-3 mt-4">
                <a asp-action="Index" class="px-4 py-2 rounded-lg border border-[#e4dbe6] text-sm text-slate-600 hover:bg-slate-100">Hủy</a>
                <button type="submit" class="px-6 py-2 rounded-lg bg-primary text-white font-bold" style="background:#c813ec;color:#fff;">Lưu thay đổi</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        // image preview update for edit
        (function () {
            const imgInput = document.getElementById('HinhAnhEdit');
            const previewWrap = document.getElementById('previewWrapEdit');
            const imgPreview = document.getElementById('imgPreviewEdit');

            function updatePreview() {
                const url = imgInput.value?.trim();
                if (url) {
                    previewWrap.classList.remove('hidden');
                    imgPreview.style.backgroundImage = `url('${url}')`;
                } else {
                    previewWrap.classList.add('hidden');
                    imgPreview.style.backgroundImage = '';
                }
            }
            if (imgInput) {
                imgInput.addEventListener('input', updatePreview);
            }

            // ensure date value is valid in yyyy-mm-dd for the input
            const dateInput = document.getElementById('NgayDangEdit');
            if (dateInput && dateInput.value) {
                // no-op (server value should be valid), but ensure formatting
                // if you need conversion, do here.
            }
        })();
    </script>

    @await Html.PartialAsync("_ValidationScriptsPartial")
}
