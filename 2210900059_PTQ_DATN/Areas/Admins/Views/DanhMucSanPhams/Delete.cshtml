@model _2210900059_PTQ_DATN.Models.DanhMucSanPham

@{
    ViewData["Title"] = "Xóa danh mục sản phẩm";
}

<div class="max-w-3xl mx-auto">

    <!-- PAGE HEADER -->
    <div class="mb-8">
        <h1 class="text-3xl font-black text-red-600">
            Xóa danh mục sản phẩm
        </h1>
        <p class="text-gray-500 mt-1">
            Hành động này không thể hoàn tác. Vui lòng kiểm tra kỹ trước khi xác nhận.
        </p>
    </div>

    <!-- WARNING CARD -->
    <div class="bg-white rounded-2xl border border-red-200 shadow-sm p-8">

        <!-- Warning banner -->
        <div class="flex items-center gap-3 mb-6 p-4 rounded-xl bg-red-50 text-red-700">
            <span class="material-symbols-outlined text-red-600">warning</span>
            <span class="font-semibold">
                Bạn có chắc chắn muốn xóa danh mục sau?
            </span>
        </div>

        <!-- INFO TABLE -->
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 text-sm">

            <div>
                <p class="text-gray-500">Tên danh mục</p>
                <p class="font-semibold text-[#171118]">
                    @Model.TenDanhMuc
                </p>
            </div>

            <div>
                <p class="text-gray-500">Slug</p>
                <p class="font-semibold text-[#171118]">
                    @Model.Slug
                </p>
            </div>

            <div class="sm:col-span-2">
                <p class="text-gray-500">Mô tả</p>
                <p class="font-semibold text-[#171118]">
                    @Model.MoTa
                </p>
            </div>

            <div>
                <p class="text-gray-500">Người tạo</p>
                <p class="font-semibold text-[#171118]">
                    @Model.MaNguoiTaoNavigation?.MaNguoiDung
                </p>
            </div>

            <div>
                <p class="text-gray-500">Người cập nhật</p>
                <p class="font-semibold text-[#171118]">
                    @Model.MaNguoiCapNhatNavigation?.MaNguoiDung
                </p>
            </div>

        </div>

        <!-- ACTIONS -->
        <form asp-action="Delete" class="flex items-center justify-end gap-4 mt-8 pt-6 border-t">

            <input type="hidden" asp-for="MaDanhMuc" />

            <a asp-action="Index"
               class="h-12 px-6 rounded-xl border border-[#e4dbe6]
                      flex items-center justify-center
                      text-gray-600 hover:bg-gray-100 transition">
                Hủy bỏ
            </a>

            <button type="submit"
                    class="h-12 px-8 rounded-xl
                           bg-red-600 text-white font-bold
                           hover:bg-red-700 transition
                           shadow-lg shadow-red-500/20">
                Xóa vĩnh viễn
            </button>
        </form>
    </div>
</div>
