@model IEnumerable<_2210900059_PTQ_DATN.Models.DanhMucSanPham>

@{
    ViewData["Title"] = "Quản lý danh mục sản phẩm";
}

<div class="flex flex-col gap-6">

    <!-- PAGE HEADER -->
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-3xl font-black text-[#171118]">
                Quản lý danh mục sản phẩm
            </h1>
            <p class="text-gray-500 mt-1">
                Danh sách các danh mục đang có trong hệ thống
            </p>
        </div>

        <a asp-action="Create"
           class="flex items-center gap-2 rounded-xl h-12 px-6
          bg-purple-600 text-white text-base font-bold
          hover:bg-purple-700
          shadow-lg shadow-purple-600/30
          transition">
            <span class="material-symbols-outlined">add_circle</span>
            <span>Thêm danh mục</span>
        </a>
    </div>

    <!-- TABLE -->
    <div class="overflow-hidden rounded-2xl border border-[#e4dbe6] bg-white shadow-sm">
        <div class="overflow-x-auto">
            <table class="w-full border-collapse">
                <thead class="bg-[#f8f6f8] border-b">
                    <tr>
                        <th class="px-6 py-4 text-sm font-bold text-left">Tên danh mục</th>
                        <th class="px-6 py-4 text-sm font-bold text-left">Slug</th>
                        <th class="px-6 py-4 text-sm font-bold text-left">Mô tả</th>
                        <th class="px-6 py-4 text-sm font-bold text-left">Người cập nhật</th>
                        <th class="px-6 py-4 text-sm font-bold text-left">Người tạo</th>
                        <th class="px-6 py-4 text-sm font-bold text-right">Thao tác</th>
                    </tr>
                </thead>

                <tbody class="divide-y">
                    @foreach (var item in Model)
                    {
                        <tr class="hover:bg-[#fcfaff] transition-colors">
                            <td class="px-6 py-4 font-semibold">
                                @item.TenDanhMuc
                            </td>

                            <td class="px-6 py-4 text-gray-600">
                                @item.Slug
                            </td>

                            <td class="px-6 py-4 text-gray-600 max-w-xs truncate">
                                @item.MoTa
                            </td>

                            <td class="px-6 py-4 text-gray-600">
                                @item.MaNguoiCapNhatNavigation?.MaNguoiDung
                            </td>

                            <td class="px-6 py-4 text-gray-600">
                                @item.MaNguoiTaoNavigation?.MaNguoiDung
                            </td>

                            <td class="px-6 py-4">
                                <div class="flex justify-end gap-2">
                                    <a asp-action="Edit" asp-route-id="@item.MaDanhMuc" class="p-2 text-primary hover:bg-primary/10 rounded-lg transition-colors">
                                        <span class="material-symbols-outlined">edit</span>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.MaDanhMuc" class="p-2 text-gray-600 hover:bg-gray-100 rounded-lg transition-colors">
                                        <span class="material-symbols-outlined">visibility</span>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.MaDanhMuc" class="p-2 text-red-500 hover:bg-red-50 rounded-lg transition-colors">
                                        <span class="material-symbols-outlined">delete</span>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
