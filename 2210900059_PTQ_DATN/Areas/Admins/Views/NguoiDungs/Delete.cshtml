@model _2210900059_PTQ_DATN.Models.NguoiDung

@{
    ViewData["Title"] = "Delete User";
}

<!DOCTYPE html>
<html lang="en" class="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@200..800&display=swap" rel="stylesheet">

    <!-- Material Symbols -->
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet">

    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: "#c813ec",
                        "background-light": "#f8f6f8"
                    },
                    fontFamily: {
                        display: ["Manrope"]
                    }
                }
            }
        }
    </script>

    <style>
        body {
            font-family: 'Manrope', sans-serif;
        }
    </style>
</head>

<body class="bg-background-light text-[#171118]">
    <main class="min-h-screen flex items-center justify-center px-6 py-10">
        <div class="w-full max-w-3xl bg-white rounded-2xl border border-[#e4dbe6] shadow-sm p-8">

            <!-- Header -->
            <div class="flex items-center gap-4 mb-6">
                
                <div>
                    <h1 class="text-2xl font-black">Delete User</h1>
                    <p class="text-gray-500 text-sm">
                        Bạn có chắc muốn xóa tài khoản người dùng này không?
                    </p>
                </div>
            </div>

            <!-- Content -->
            <div class="rounded-xl border border-[#e4dbe6] divide-y">

                <div class="grid grid-cols-3 px-6 py-4">
                    <span class="font-semibold text-gray-600">Username</span>
                    <span class="col-span-2 font-bold">@Model.TenDangNhap</span>
                </div>

                <div class="grid grid-cols-3 px-6 py-4">
                    <span class="font-semibold text-gray-600">Full Name</span>
                    <span class="col-span-2">@Model.HoTen</span>
                </div>

                <div class="grid grid-cols-3 px-6 py-4">
                    <span class="font-semibold text-gray-600">Email</span>
                    <span class="col-span-2">@Model.Email</span>
                </div>

                <div class="grid grid-cols-3 px-6 py-4">
                    <span class="font-semibold text-gray-600">Role</span>
                    <span class="col-span-2">
                        <span class="px-3 py-1 rounded-full text-xs font-bold
                              @(Model.VaiTro == "Admin"
                                                              ? "bg-purple-100 text-purple-600"
                                                              : "bg-blue-100 text-blue-600")">
                            @Model.VaiTro
                        </span>
                    </span>
                </div>

                <div class="grid grid-cols-3 px-6 py-4">
                    <span class="font-semibold text-gray-600">Created Date</span>
                    <span class="col-span-2">@Model.NgayTao</span>
                </div>

            </div>

            <!-- Warning -->
            <div class="mt-6 p-4 rounded-xl bg-red-50 border border-red-200 text-red-700 text-sm">
                <strong>Warning:</strong> This action cannot be undone. Deleting this user may affect related data.
            </div>

            <!-- Actions -->
            <form asp-action="Delete" class="flex justify-between items-center mt-8">
                <input type="hidden" asp-for="MaNguoiDung" />

                <a asp-action="Index"
                   class="px-6 h-11 flex items-center rounded-xl border border-[#e4dbe6] text-gray-600 hover:bg-gray-100 transition">
                    Quay lại
                </a>

                <button type="submit"
                        class="px-6 h-11 flex items-center gap-2 rounded-xl bg-red-600 text-white font-bold hover:bg-red-700 transition">
                    <span class="material-symbols-outlined text-sm">delete</span>
                    Xác nhận xóa
                </button>
            </form>

        </div>
    </main>
</body>
</html>
