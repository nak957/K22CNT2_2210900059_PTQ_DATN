@using System.ComponentModel
@using Newtonsoft.Json.Linq
@using System.Xml.Linq
@model IEnumerable<_2210900059_PTQ_DATN.Models.NguoiDung>

@{
    ViewData["Title"] = "Quản lý Người dùng";
}

<div class="layout-content-container flex flex-col w-full max-w-[1200px] px-6 py-10 gap-8 mx-auto">
    <!-- Heading + Add -->
    <div class="flex flex-wrap items-center justify-between gap-4">
        <div class="flex flex-col gap-1">
            <h1 class="text-[#171118] dark:text-white text-4xl font-black leading-tight">Quản lý Người dùng</h1>
            <p class="text-gray-500 dark:text-gray-400">Danh sách tài khoản hệ thống — xem, chỉnh sửa hoặc xóa người dùng</p>
        </div>

        <div class="flex items-center gap-3">
            <a asp-action="Create"
               aria-label="Thêm người dùng"
               class="flex min-w-[160px] items-center justify-center gap-2 rounded-xl h-12 px-5 bg-indigo-600 hover:bg-indigo-700 text-white text-base font-bold hover:brightness-105 shadow-md transition-all">
                <span class="material-symbols-outlined text-white">person_add</span>
                <span>Thêm người dùng</span>
            </a>
        </div>
    </div>

    <!-- Utility bar -->
    <div class="flex flex-col md:flex-row gap-4 w-full bg-white dark:bg-background-dark p-4 rounded-2xl shadow-sm border border-[#e4dbe6] dark:border-[#3a2a3d]">
        <div class="flex-1">
            <div class="flex flex-col w-full">
                <div class="flex w-full items-stretch rounded-xl h-12 overflow-hidden border border-[#e4dbe6] dark:border-[#3a2a3d]">
                    <div class="text-gray-400 flex bg-[#f8f6f8] dark:bg-[#2d1b31] items-center justify-center pl-4">
                        <span class="material-symbols-outlined">search</span>
                    </div>
                    <input id="searchUsers" aria-label="Tìm kiếm người dùng" class="form-input flex w-full pl-3 text-[#171118] dark:text-white bg-[#f8f6f8] dark:bg-[#2d1b31] placeholder:text-gray-400 px-4 text-base" placeholder="Tìm theo tên đăng nhập, họ tên hoặc email..." />
                </div>
            </div>
        </div>

        <div class="flex gap-2 items-center">
            <button class="flex h-12 items-center justify-center gap-x-2 rounded-xl bg-primary/10 border border-primary/20 px-4 text-primary font-bold">
                <span class="material-symbols-outlined text-sm">filter_list</span>
                <span class="text-sm font-medium">Tất cả vai trò</span>
            </button>
        </div>
    </div>

    <!-- Table -->
    <div class="w-full container">
        <div class="flex flex-col overflow-hidden rounded-2xl border border-[#e4dbe6] dark:border-[#3a2a3d] bg-white dark:bg-background-dark shadow-sm">
            <div class="overflow-x-auto">
                <table class="w-full text-left border-collapse">
                    <thead>
                        <tr class="bg-[#f8f6f8] dark:bg-[#2d1b31] border-b border-[#e4dbe6] dark:border-[#3a2a3d]">
                            <th class="px-6 py-4 text-sm font-bold text-[#171118] dark:text-white uppercase tracking-wider">#</th>
                            <th class="px-6 py-4 text-sm font-bold text-[#171118] dark:text-white uppercase tracking-wider">Tên đăng nhập</th>
                            <th class="px-6 py-4 text-sm font-bold text-[#171118] dark:text-white uppercase tracking-wider">Họ tên</th>
                            <th class="px-6 py-4 text-sm font-bold text-[#171118] dark:text-white uppercase tracking-wider">Email</th>
                            <th class="px-6 py-4 text-sm font-bold text-[#171118] dark:text-white uppercase tracking-wider">Vai trò</th>
                            <th class="px-6 py-4 text-sm font-bold text-[#171118] dark:text-white uppercase tracking-wider">Ngày tạo</th>
                            <th class="px-6 py-4 text-sm font-bold text-[#171118] dark:text-white uppercase tracking-wider text-right">Hành động</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-[#e4dbe6] dark:divide-[#3a2a3d]">
                        @if (Model != null)
                        {
                            var i = 1;
                            foreach (var item in Model)
                            {
                                <tr class="hover:bg-[#fcfaff] dark:hover:bg-[#2d1b31]/50 transition-colors">
                                    <td class="px-6 py-4 align-middle text-sm text-gray-600">@i</td>
                                    <td class="px-6 py-4 align-middle text-sm font-semibold text-[#171118] dark:text-white">@item.TenDangNhap</td>
                                    <td class="px-6 py-4 align-middle text-sm text-[#171118] dark:text-white">@item.HoTen</td>
                                    <td class="px-6 py-4 align-middle text-sm text-gray-600">@item.Email</td>
                                    <td class="px-6 py-4 align-middle text-sm">
                                        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-primary/10 text-primary border border-primary/20">@item.VaiTro</span>
                                    </td>
                                    <td class="px-6 py-4 align-middle text-sm text-gray-600">@item.NgayTao?.ToString("yyyy-MM-dd")</td>
                                    <td class="px-6 py-4 text-right">
                                        <div class="flex justify-end gap-2">
                                            <a asp-action="Edit" asp-route-id="@item.MaNguoiDung" class="p-2 text-primary hover:bg-primary/10 rounded-lg transition-colors" title="Sửa">
                                                <span class="material-symbols-outlined">edit</span>
                                            </a>
                                            <a asp-action="Details" asp-route-id="@item.MaNguoiDung" class="p-2 text-slate-700 hover:bg-slate-100 rounded-lg transition-colors" title="Chi tiết">
                                                <span class="material-symbols-outlined">visibility</span>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.MaNguoiDung" class="p-2 text-red-500 hover:bg-red-50 rounded-lg transition-colors" title="Xóa">
                                                <span class="material-symbols-outlined">delete</span>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                i++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="px-6 py-8 text-center text-gray-500">Không có bản ghi</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination (placeholder) -->
            <div class="flex items-center justify-between bg-[#f8f6f8] dark:bg-[#2d1b31] px-6 py-4 border-t border-[#e4dbe6] dark:border-[#3a2a3d]">
                <p class="text-sm text-gray-500 dark:text-gray-400">Hiển thị tất cả người dùng</p>
                <div class="flex items-center gap-1">
                    <button class="flex size-8 items-center justify-center rounded-lg border border-[#e4dbe6] dark:border-[#3a2a3d] bg-white dark:bg-background-dark text-gray-400 hover:text-primary transition-colors">
                        <span class="material-symbols-outlined text-sm">chevron_left</span>
                    </button>
                    <button class="flex size-8 items-center justify-center rounded-lg bg-primary text-white text-sm font-bold">1</button>
                    <button class="flex size-8 items-center justify-center rounded-lg border border-[#e4dbe6] dark:border-[#3a2a3d] bg-white dark:bg-background-dark text-gray-600 hover:border-primary transition-colors">2</button>
                    <button class="flex size-8 items-center justify-center rounded-lg border border-[#e4dbe6] dark:border-[#3a2a3d] bg-white dark:bg-background-dark text-gray-400 hover:text-primary transition-colors">
                        <span class="material-symbols-outlined text-sm">chevron_right</span>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Summary cards (optional) -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 mt-4">
        <div class="p-4 bg-white dark:bg-background-dark rounded-2xl border border-[#e4dbe6] dark:border-[#3a2a3d] flex items-center gap-4">
            <div class="size-12 rounded-xl bg-primary/10 flex items-center justify-center text-primary">
                <span class="material-symbols-outlined">account_circle</span>
            </div>
            <div>
                <p class="text-xs text-gray-500 dark:text-gray-400 uppercase tracking-wider font-bold">Tổng tài khoản</p>
                <p class="text-2xl font-black text-[#171118] dark:text-white">@Model?.Count() ?? 0</p>
            </div>
        </div>
    </div>
</div>
